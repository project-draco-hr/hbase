{
  this(store,scan.getCacheBlocks(),scan,columns);
  if (columns != null && scan.isRaw()) {
    throw new DoNotRetryIOException("Cannot specify any column for a raw scan");
  }
  matcher=new ScanQueryMatcher(scan,store.scanInfo,columns,ScanType.USER_SCAN,HConstants.LATEST_TIMESTAMP);
  List<KeyValueScanner> scanners=getScanners(scan,columns);
  if (explicitColumnQuery && lazySeekEnabledGlobally) {
    for (    KeyValueScanner scanner : scanners) {
      scanner.requestSeek(matcher.getStartKey(),false,true);
    }
  }
 else {
    for (    KeyValueScanner scanner : scanners) {
      scanner.seek(matcher.getStartKey());
    }
  }
  heap=new KeyValueHeap(scanners,store.comparator);
  this.store.addChangedReaderObserver(this);
}
