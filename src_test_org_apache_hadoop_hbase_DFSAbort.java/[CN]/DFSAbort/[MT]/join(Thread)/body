{
  if (t == null) {
    return;
  }
  for (int i=0; t.isAlive(); i++) {
    try {
      Thread.sleep(1000);
    }
 catch (    InterruptedException e) {
      LOG.info("Continuing...",e);
    }
    if (i != 0 && i % 30 == 0) {
      ReflectionUtils.printThreadInfo(new PrintWriter(System.out),"Automatic Stack Trace every 30 seconds waiting on " + t.getName());
    }
  }
}
