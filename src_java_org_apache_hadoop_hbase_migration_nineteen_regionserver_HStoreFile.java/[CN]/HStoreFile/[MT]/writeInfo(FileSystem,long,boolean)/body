{
  Path p=getInfoFilePath();
  FSDataOutputStream out=filesystem.create(p);
  try {
    out.writeByte(INFO_SEQ_NUM);
    out.writeLong(infonum);
    if (mc) {
      this.majorCompaction=mc;
      out.writeByte(MAJOR_COMPACTION);
      out.writeBoolean(mc);
    }
  }
  finally {
    out.close();
  }
}
