{
  String table="tableMetaHole";
  try {
    setupTable(table);
    HRegionInfo hriHole=createRegion(conf,tbl.getTableDescriptor(),Bytes.toBytes("D"),Bytes.toBytes(""));
    TEST_UTIL.getHBaseCluster().getMaster().assignRegion(hriHole);
    TEST_UTIL.getHBaseCluster().getMaster().getAssignmentManager().waitForAssignment(hriHole);
    TEST_UTIL.getHBaseAdmin().disableTable(table);
    deleteRegion(conf,tbl.getTableDescriptor(),Bytes.toBytes("C"),Bytes.toBytes(""));
    TEST_UTIL.getHBaseAdmin().enableTable(table);
    assertErrors(doFsck(false),new ERROR_CODE[]{ERROR_CODE.HOLE_IN_REGION_CHAIN});
  }
  finally {
    deleteTable(table);
  }
}
