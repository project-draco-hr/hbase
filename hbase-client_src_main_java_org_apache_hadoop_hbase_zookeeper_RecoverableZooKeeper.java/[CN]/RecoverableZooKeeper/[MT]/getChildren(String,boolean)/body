{
  RetryAccountant retryCounter=retryCounterFactory.create();
  while (true) {
    try {
      return zk.getChildren(path,watch);
    }
 catch (    KeeperException e) {
switch (e.code()) {
case CONNECTIONLOSS:
case SESSIONEXPIRED:
case OPERATIONTIMEOUT:
        retryOrThrow(retryCounter,e,"getChildren");
      break;
default :
    throw e;
}
}
retryCounter.sleep();
}
}
