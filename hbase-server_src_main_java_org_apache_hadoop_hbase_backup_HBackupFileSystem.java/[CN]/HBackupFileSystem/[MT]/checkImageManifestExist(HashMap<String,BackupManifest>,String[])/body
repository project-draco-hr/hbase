{
  try {
    for (    String tableName : tableArray) {
      BackupManifest manifest=this.getManifest(tableName);
      backupManifestMap.put(tableName,manifest);
    }
  }
 catch (  IOException e) {
    String expMsg=e.getMessage();
    if (expMsg.contains("No FileSystem for scheme")) {
      if (expMsg.contains("gpfs")) {
        LOG.error("Please change to use webhdfs url when " + "the backup image to restore locates on gpfs cluster");
      }
 else {
        LOG.error("Unsupported filesystem scheme found in the backup target url, " + "please check the url to make sure no typo in it");
      }
      throw e;
    }
 else     if (expMsg.contains("no authority supported")) {
      LOG.error("Please change to use webhdfs url when " + "the backup image to restore locates on gpfs cluster");
      throw e;
    }
 else {
      LOG.error(expMsg);
      throw e;
    }
  }
}
