{
  long curt=System.currentTimeMillis();
  long endt=curt + timems;
  while (curt < endt) {
    if (e.eval() == oldval) {
      try {
        Thread.sleep(10);
      }
 catch (      InterruptedException eintr) {
      }
      curt=System.currentTimeMillis();
    }
 else {
      assertEquals(newval,e.eval());
      return;
    }
  }
  assertTrue(false);
}
