{
  if (LOG.isTraceEnabled()) {
    LOG.trace("Started the compacted hfiles cleaner for the region " + this.region.getRegionInfo());
  }
  for (  Store store : region.getStores()) {
    try {
      store.closeAndArchiveCompactedFiles();
      if (LOG.isTraceEnabled()) {
        LOG.trace("Completed archiving the compacted files for the region " + this.region.getRegionInfo() + " under the store "+ store.getColumnFamilyName());
      }
    }
 catch (    Exception e) {
      LOG.error("Exception while trying to close and archive the comapcted store files of the store  " + store.getColumnFamilyName() + " in the region "+ this.region.getRegionInfo(),e);
    }
  }
  if (LOG.isTraceEnabled()) {
    LOG.trace("Completed the compacted hfiles cleaner for the region " + this.region.getRegionInfo());
  }
}
