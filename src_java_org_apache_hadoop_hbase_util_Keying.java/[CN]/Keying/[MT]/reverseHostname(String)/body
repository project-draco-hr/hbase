{
  if (hostname == null) {
    return "";
  }
  StringBuilder sb=new StringBuilder(hostname.length());
  for (StringTokenizer st=new StringTokenizer(hostname,".",false); st.hasMoreElements(); ) {
    Object next=st.nextElement();
    if (sb.length() > 0) {
      sb.insert(0,".");
    }
    sb.insert(0,next);
  }
  return sb.toString();
}
