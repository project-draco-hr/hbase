{
  String encodedName=HRegionInfo.encodeRegionName(regionName);
  RegionState regionState=regionStates.get(encodedName);
  if (regionState != null) {
    return regionState.getRegion();
  }
  try {
    Pair<HRegionInfo,ServerName> p=MetaReader.getRegion(server.getCatalogTracker(),regionName);
    HRegionInfo hri=p == null ? null : p.getFirst();
    if (hri != null) {
      createRegionState(hri);
    }
    return hri;
  }
 catch (  IOException e) {
    server.abort("Aborting because error occoured while reading " + Bytes.toStringBinary(regionName) + " from hbase:meta",e);
    return null;
  }
}
