{
  if (files.size() < 2) {
    return true;
  }
  double currentRatio=isOffPeak ? comConf.getCompactionRatioOffPeak() : comConf.getCompactionRatio();
  long totalFileSize=0;
  for (int i=0; i < files.size(); i++) {
    totalFileSize+=files.get(i).getReader().length();
  }
  for (int i=0; i < files.size(); i++) {
    long singleFileSize=files.get(i).getReader().length();
    long sumAllOtherFilesize=totalFileSize - singleFileSize;
    if ((singleFileSize > sumAllOtherFilesize * currentRatio) && (sumAllOtherFilesize >= comConf.getMinCompactSize())) {
      return false;
    }
  }
  return true;
}
