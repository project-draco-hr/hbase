{
  if (!isLocal(c)) {
    return c;
  }
  String address=c.get(MASTER_ADDRESS);
  if (address == null) {
    throw new NullPointerException("Address is null for " + MASTER_ADDRESS);
  }
  String port=address.startsWith(LOCAL_COLON) ? address.substring(LOCAL_COLON.length()) : Integer.toString(DEFAULT_MASTER_PORT);
  c.set(MASTER_ADDRESS,"localhost:" + port);
  return c;
}
