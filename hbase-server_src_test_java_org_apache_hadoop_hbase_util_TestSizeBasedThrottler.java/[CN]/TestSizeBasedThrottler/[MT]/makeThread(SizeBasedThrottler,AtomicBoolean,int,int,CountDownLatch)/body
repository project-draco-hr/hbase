{
  Thread ret=new Thread(new Runnable(){
    @Override public void run(){
      try {
        latch.await();
        if (throttler.increase(delta) > limit) {
          failed.set(true);
        }
        throttler.decrease(delta);
      }
 catch (      Exception e) {
        failed.set(true);
      }
    }
  }
);
  ret.start();
  return ret;
}
