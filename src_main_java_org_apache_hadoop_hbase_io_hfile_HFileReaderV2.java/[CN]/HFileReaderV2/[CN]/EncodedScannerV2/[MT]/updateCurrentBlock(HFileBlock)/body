{
  block=newBlock;
  if (block.getBlockType() != BlockType.ENCODED_DATA) {
    throw new IllegalStateException("EncodedScannerV2 works only on encoded data blocks");
  }
  short dataBlockEncoderId=block.getDataBlockEncodingId();
  if (dataBlockEncoder == null || !DataBlockEncodings.isCorrectEncoder(dataBlockEncoder,dataBlockEncoderId)) {
    DataBlockEncoder encoder=DataBlockEncodings.getDataBlockEncoderFromId(dataBlockEncoderId);
    setDataBlockEncoder(encoder);
  }
  seeker.setCurrentBuffer(getEncodedBuffer(newBlock));
  blockFetches++;
}
