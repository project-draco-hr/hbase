{
  super.configureForRegion(region);
  Configuration conf=getConf();
  this.initialSize=conf.getLong("hbase.increasing.policy.initial.size",-1);
  if (this.initialSize > 0) {
    return;
  }
  HTableDescriptor desc=region.getTableDesc();
  if (desc != null) {
    this.initialSize=2 * desc.getMemStoreFlushSize();
  }
  if (this.initialSize <= 0) {
    this.initialSize=2 * conf.getLong(HConstants.HREGION_MEMSTORE_FLUSH_SIZE,HTableDescriptor.DEFAULT_MEMSTORE_FLUSH_SIZE);
  }
}
