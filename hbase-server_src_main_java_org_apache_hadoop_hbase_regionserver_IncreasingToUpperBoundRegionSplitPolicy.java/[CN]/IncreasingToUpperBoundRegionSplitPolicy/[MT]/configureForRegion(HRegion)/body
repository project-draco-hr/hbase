{
  super.configureForRegion(region);
  Configuration conf=getConf();
  HTableDescriptor desc=region.getTableDesc();
  if (desc != null) {
    this.flushSize=desc.getMemStoreFlushSize();
  }
  if (this.flushSize <= 0) {
    this.flushSize=conf.getLong(HConstants.HREGION_MEMSTORE_FLUSH_SIZE,HTableDescriptor.DEFAULT_MEMSTORE_FLUSH_SIZE);
  }
}
