{
  utility=new HBaseTestingUtility();
  conf=utility.getConfiguration();
  conf.setClass("hbase.region.replica.replication.ReplicationQueuesType",TableBasedReplicationQueuesImpl.class,ReplicationQueues.class);
  conf.setClass("hbase.region.replica.replication.ReplicationQueuesClientType",TableBasedReplicationQueuesClientImpl.class,ReplicationQueuesClient.class);
  utility.startMiniCluster();
  zkw=HBaseTestingUtility.getZooKeeperWatcher(utility);
  String replicationZNodeName=conf.get("zookeeper.znode.replication","replication");
  replicationZNode=ZKUtil.joinZNode(zkw.baseZNode,replicationZNodeName);
}
