{
  Cell[] values=null;
  values=connection.getRegionServerWithRetries(new ServerCallable<Cell[]>(connection,tableName,row){
    public Cell[] call() throws IOException {
      return server.get(location.getRegionInfo().getRegionName(),row,column,timestamp,numVersions);
    }
  }
);
  if (values != null) {
    ArrayList<Cell> cellValues=new ArrayList<Cell>();
    for (int i=0; i < values.length; i++) {
      cellValues.add(values[i]);
    }
    return cellValues.toArray(new Cell[values.length]);
  }
  return null;
}
