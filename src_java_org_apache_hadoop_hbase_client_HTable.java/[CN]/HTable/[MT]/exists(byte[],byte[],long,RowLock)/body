{
  final Get g=new Get(row,rl);
  g.addColumn(column);
  g.setTimeStamp(timestamp);
  return connection.getRegionServerWithRetries(new ServerCallable<Boolean>(connection,tableName,row){
    public Boolean call() throws IOException {
      return Boolean.valueOf(server.exists(location.getRegionInfo().getRegionName(),g));
    }
  }
).booleanValue();
}
