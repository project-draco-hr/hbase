{
  return connection.getRegionServerWithRetries(new ServerCallable<Boolean>(connection,tableName,row){
    public Boolean call() throws IOException {
      long lockId=-1L;
      if (rl != null) {
        lockId=rl.getLockId();
      }
      return server.exists(location.getRegionInfo().getRegionName(),row,column,timestamp,lockId);
    }
  }
);
}
