{
  connection.getRegionServerWithRetries(new ServerCallable<Boolean>(connection,tableName,row){
    public Boolean call() throws IOException {
      if (column != null) {
        this.server.deleteAll(location.getRegionInfo().getRegionName(),row,column,ts);
      }
 else {
        this.server.deleteAll(location.getRegionInfo().getRegionName(),row,ts);
      }
      return null;
    }
  }
);
