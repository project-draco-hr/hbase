{
  connection.getRegionServerWithRetries(new ServerCallable<Boolean>(connection,tableName,row){
    public Boolean call() throws IOException {
      long lockId=-1L;
      if (rl != null) {
        lockId=rl.getLockId();
      }
      server.deleteFamily(location.getRegionInfo().getRegionName(),row,family,timestamp,lockId);
      return null;
    }
  }
);
}
