{
  connection.getRegionServerWithRetries(new ServerCallable<Boolean>(connection,tableName,row){
    public Boolean call() throws IOException {
      long lockId=-1L;
      if (r1 != null) {
        lockId=r1.getLockId();
      }
      server.deleteFamilyByRegex(location.getRegionInfo().getRegionName(),row,familyRegex,timestamp,lockId);
      return null;
    }
  }
);
}
