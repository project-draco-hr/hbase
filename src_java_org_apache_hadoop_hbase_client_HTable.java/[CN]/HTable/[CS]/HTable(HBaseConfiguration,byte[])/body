{
  this.connection=HConnectionManager.getConnection(conf);
  this.tableName=tableName;
  this.scannerTimeout=conf.getInt("hbase.regionserver.lease.period",60 * 1000);
  this.configuration=conf;
  this.connection.locateRegion(tableName,HConstants.EMPTY_START_ROW);
  this.writeBuffer=new ArrayList<BatchUpdate>();
  this.writeBufferSize=this.configuration.getLong("hbase.client.write.buffer",10485760);
  this.autoFlush=true;
  this.currentWriteBufferSize=0;
  this.scannerCaching=conf.getInt("hbase.client.scanner.caching",30);
}
