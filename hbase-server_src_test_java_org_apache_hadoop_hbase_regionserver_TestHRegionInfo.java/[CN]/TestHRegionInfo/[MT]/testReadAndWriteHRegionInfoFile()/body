{
  HBaseTestingUtility htu=new HBaseTestingUtility();
  HRegionInfo hri=HRegionInfo.FIRST_META_REGIONINFO;
  Path basedir=htu.getDataTestDir();
  HRegion r=HRegion.createHRegion(hri,basedir,htu.getConfiguration(),HTableDescriptor.META_TABLEDESC);
  long modtime=getModTime(r);
  HRegion.closeHRegion(r);
  Thread.sleep(1001);
  r=HRegion.createHRegion(hri,basedir,htu.getConfiguration(),HTableDescriptor.META_TABLEDESC);
  long modtime2=getModTime(r);
  assertEquals(modtime,modtime2);
  HRegionInfo deserializedHri=HRegion.loadDotRegionInfoFileContent(FileSystem.get(htu.getConfiguration()),r.getRegionDir());
  assertTrue(hri.equals(deserializedHri));
}
