{
  SchemaAlterStatus sas=new SchemaAlterStatus(regionServer.getServerName().getServerName(),numberOfOnlineRegions);
  LOG.debug("Creating Schema Alter State node = " + sas);
  try {
    ZKUtil.createSetData(this.watcher,getSchemaChangeNodePathForTableAndServer(tableName,regionServer.getServerName().getServerName()),Writables.getBytes(sas));
  }
 catch (  KeeperException ke) {
    String errmsg="KeeperException while creating the schema change node with " + "server name for table = " + tableName + " server = "+ regionServer.getServerName().getServerName()+ " Message = "+ ke.getCause();
    LOG.error(errmsg,ke);
    TaskMonitor.get().createStatus(errmsg);
  }
}
