{
  TableName tableName=TableName.valueOf(table);
  long startWait=System.currentTimeMillis();
  while (!admin.isTableDisabled(tableName)) {
    assertTrue("Timed out waiting for table to become disabled " + Bytes.toStringBinary(table),System.currentTimeMillis() - startWait < timeoutMillis);
    Thread.sleep(200);
  }
}
