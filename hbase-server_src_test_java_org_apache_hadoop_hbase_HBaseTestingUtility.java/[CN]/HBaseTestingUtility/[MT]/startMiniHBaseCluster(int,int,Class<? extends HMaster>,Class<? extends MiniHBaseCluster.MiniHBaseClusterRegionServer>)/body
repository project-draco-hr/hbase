{
  createRootDir();
  conf.setInt("hbase.master.wait.on.regionservers.mintostart",numSlaves);
  conf.setInt("hbase.master.wait.on.regionservers.maxtostart",numSlaves);
  Configuration c=new Configuration(this.conf);
  this.hbaseCluster=new MiniHBaseCluster(c,numMasters,numSlaves,masterClass,regionserverClass);
  HTable t=new HTable(c,HConstants.META_TABLE_NAME);
  ResultScanner s=t.getScanner(new Scan());
  while (s.next() != null) {
    continue;
  }
  s.close();
  t.close();
  getHBaseAdmin();
  LOG.info("Minicluster is up");
  return this.hbaseCluster;
}
