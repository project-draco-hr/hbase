{
  lock.obtainReadLock();
  try {
    Text key=new Text();
    long maxSize=0;
    for (    HStore store : stores.values()) {
      long size=store.getLargestFileSize(key);
      if (size > maxSize) {
        maxSize=size;
        midKey.set(key);
      }
    }
    return (maxSize > (this.desiredMaxFileSize + (this.desiredMaxFileSize / 2)));
  }
  finally {
    lock.releaseReadLock();
  }
}
