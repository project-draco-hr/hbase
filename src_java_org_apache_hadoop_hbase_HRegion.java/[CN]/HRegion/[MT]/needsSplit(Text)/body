{
  lock.obtainReadLock();
  try {
    Text key=new Text();
    long maxSize=0;
    for (Iterator<HStore> i=stores.values().iterator(); i.hasNext(); ) {
      long size=i.next().getLargestFileSize(key);
      if (size > maxSize) {
        maxSize=size;
        midKey.set(key);
      }
    }
    return (maxSize > (DESIRED_MAX_FILE_SIZE + (DESIRED_MAX_FILE_SIZE / 2)));
  }
  finally {
    lock.releaseReadLock();
  }
}
