{
  boolean needsCompaction=false;
  lock.readLock().lock();
  try {
    for (Iterator<HStore> i=stores.values().iterator(); i.hasNext(); ) {
      if (i.next().getNMaps() > compactionThreshold) {
        needsCompaction=true;
        break;
      }
    }
  }
  finally {
    lock.readLock().unlock();
  }
  return needsCompaction;
}
