{
  boolean blocked=false;
  while (!checkCommitsSinceFlush()) {
    if (!blocked) {
      LOG.info("Blocking updates for '" + Thread.currentThread().getName() + "': Memcache size "+ StringUtils.humanReadableInt(this.memcache.getSize())+ " is >= than blocking "+ StringUtils.humanReadableInt(this.blockingMemcacheSize)+ " size");
    }
    blocked=true;
    try {
      wait(threadWakeFrequency);
    }
 catch (    InterruptedException e) {
    }
  }
  if (blocked) {
    LOG.info("Unblocking updates for '" + Thread.currentThread().getName() + "'");
  }
}
