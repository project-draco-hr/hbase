{
  this.scanners=new HInternalScannerInterface[stores.length];
  try {
    for (int i=0; i < stores.length; i++) {
      HInternalScannerInterface scanner=scanners[i]=stores[i].getScanner(timestamp,cols,firstRow,filter);
      if (scanner.isWildcardScanner()) {
        this.wildcardMatch=true;
      }
      if (scanner.isMultipleMatchScanner()) {
        this.multipleMatchers=true;
      }
    }
  }
 catch (  IOException e) {
    for (int i=0; i < this.scanners.length; i++) {
      if (scanners[i] != null) {
        closeScanner(i);
      }
    }
    throw e;
  }
  activeScannerCount.incrementAndGet();
}
