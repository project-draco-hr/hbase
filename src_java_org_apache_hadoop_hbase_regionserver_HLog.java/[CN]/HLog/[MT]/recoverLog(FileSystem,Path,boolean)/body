{
  if (!append) {
    return;
  }
  boolean recovered=false;
  while (!recovered) {
    try {
      FSDataOutputStream out=fs.append(p);
      out.close();
      recovered=true;
    }
 catch (    IOException e) {
      LOG.info("Failed open for append, waiting on lease recovery: " + p,e);
      try {
        Thread.sleep(1000);
      }
 catch (      InterruptedException ex) {
      }
    }
  }
  LOG.info("Past out lease recovery");
}
