{
  long time=0;
  long currentTime=System.currentTimeMillis();
  try {
    FileStatus fStat=filePath.getFileSystem(conf).getFileStatus(filePath);
    time=fStat.getModificationTime();
  }
 catch (  IOException e) {
    LOG.error("Unable to get modification time of file " + filePath.getName() + ", not deleting it.",e);
    return false;
  }
  long life=currentTime - time;
  if (life < 0) {
    LOG.warn("Found a log newer than current time, " + "probably a clock skew");
    return false;
  }
  return life > ttl;
}
