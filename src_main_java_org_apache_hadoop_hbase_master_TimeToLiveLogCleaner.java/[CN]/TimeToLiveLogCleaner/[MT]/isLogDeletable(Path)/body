{
  long time=0;
  long currentTime=System.currentTimeMillis();
  String[] parts=filePath.getName().split("\\.");
  try {
    time=Long.parseLong(parts[parts.length - 1]);
  }
 catch (  NumberFormatException e) {
    LOG.error("Unable to parse the timestamp in " + filePath.getName() + ", deleting it since it's invalid and may not be a hlog",e);
    return true;
  }
  long life=currentTime - time;
  if (life < 0) {
    LOG.warn("Found a log newer than current time, " + "probably a clock skew");
    return false;
  }
  return life > ttl;
}
