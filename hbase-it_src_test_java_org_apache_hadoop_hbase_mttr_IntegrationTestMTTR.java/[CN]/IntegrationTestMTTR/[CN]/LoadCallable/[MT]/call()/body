{
  int colsPerKey=10;
  int recordSize=500;
  int numServers=util.getHBaseClusterInterface().getInitialClusterStatus().getServersSize();
  int numKeys=numServers * 5000;
  int writeThreads=10;
  do {
    int ret=loadTool.run(new String[]{"-tn",loadTableName.getNameAsString(),"-write",String.format("%d:%d:%d",colsPerKey,recordSize,writeThreads),"-num_keys",String.valueOf(numKeys),"-skip_init"});
    assertEquals("Load failed",0,ret);
  }
 while (!future.isDone());
  return true;
}
