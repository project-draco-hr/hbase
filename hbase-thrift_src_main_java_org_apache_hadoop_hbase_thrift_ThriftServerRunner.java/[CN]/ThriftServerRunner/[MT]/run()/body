{
  realUser.doAs(new PrivilegedAction<Object>(){
    @Override public Object run(){
      try {
        if (conf.getBoolean(USE_HTTP_CONF_KEY,false)) {
          setupHTTPServer();
          httpServer.start();
          httpServer.join();
        }
 else {
          setupServer();
          tserver.serve();
        }
      }
 catch (      Exception e) {
        LOG.fatal("Cannot run ThriftServer",e);
        System.exit(-1);
      }
      return null;
    }
  }
);
}
