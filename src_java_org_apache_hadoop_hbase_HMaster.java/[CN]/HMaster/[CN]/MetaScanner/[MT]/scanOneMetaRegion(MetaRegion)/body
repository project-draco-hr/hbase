{
  int tries=0;
  while (!closed.get() && tries < numRetries) {
    while (!closed.get() && !rootScanned && rootRegionLocation.get() == null) {
      sleeper.sleep();
    }
    if (closed.get()) {
      continue;
    }
    try {
synchronized (metaScannerLock) {
        scanRegion(region);
        onlineMetaRegions.put(region.getStartKey(),region);
      }
      break;
    }
 catch (    IOException e) {
      e=RemoteExceptionHandler.checkIOException(e);
      tries+=1;
      if (tries == 1) {
        LOG.warn("Scan one META region",e);
      }
 else {
        LOG.error("Scan one META region",e);
        if (tries == numRetries - 1) {
          if (checkFileSystem()) {
            if (e instanceof ConnectException) {
              LOG.debug("Region hosting server is gone.");
            }
          }
        }
      }
    }
catch (    Exception e) {
      LOG.error("Unexpected exception",e);
    }
    sleeper.sleep();
  }
}
