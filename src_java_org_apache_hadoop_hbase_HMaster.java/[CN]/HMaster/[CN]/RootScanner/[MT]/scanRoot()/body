{
  int tries=0;
  while (!closed && tries < numRetries) {
synchronized (rootRegionLocation) {
      while (!closed && rootRegionLocation.get() == null) {
        try {
          rootRegionLocation.wait();
        }
 catch (        InterruptedException e) {
        }
      }
    }
    if (closed) {
      continue;
    }
    try {
synchronized (rootScannerLock) {
        scanRegion(new MetaRegion(rootRegionLocation.get(),HGlobals.rootRegionInfo.regionName,null));
      }
      break;
    }
 catch (    IOException e) {
      if (e instanceof RemoteException) {
        try {
          e=RemoteExceptionHandler.decodeRemoteException((RemoteException)e);
        }
 catch (        IOException ex) {
          e=ex;
        }
      }
      tries+=1;
      if (tries == 1) {
        LOG.warn("Scan ROOT region",e);
      }
 else {
        LOG.error("Scan ROOT region",e);
      }
    }
    if (!closed) {
      try {
        Thread.sleep(threadWakeFrequency);
      }
 catch (      InterruptedException e) {
      }
    }
  }
}
