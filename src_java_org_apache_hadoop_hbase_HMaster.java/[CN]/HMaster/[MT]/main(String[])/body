{
  if (args.length < 1) {
    printUsageAndExit();
  }
  Configuration conf=new HBaseConfiguration();
  final String addressArgKey="--bind=";
  for (  String cmd : args) {
    if (cmd.startsWith(addressArgKey)) {
      conf.set(MASTER_ADDRESS,cmd.substring(addressArgKey.length()));
      continue;
    }
    if (cmd.equals("start")) {
      try {
        (new Thread(new HMaster(conf))).start();
      }
 catch (      Throwable t) {
        LOG.error("Can not start master because " + StringUtils.stringifyException(t));
        System.exit(-1);
      }
      break;
    }
    if (cmd.equals("stop")) {
      try {
        HClient client=new HClient(conf);
        client.shutdown();
      }
 catch (      Throwable t) {
        LOG.error("Can not stop master because " + StringUtils.stringifyException(t));
        System.exit(-1);
      }
      break;
    }
    printUsageAndExit();
  }
}
