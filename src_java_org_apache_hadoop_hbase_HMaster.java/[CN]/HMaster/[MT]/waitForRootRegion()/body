{
  while (rootRegionLocation == null) {
    try {
      if (LOG.isDebugEnabled()) {
        LOG.debug("Wait for root region");
      }
      wait();
      if (LOG.isDebugEnabled()) {
        LOG.debug("Wake from wait for root region");
      }
    }
 catch (    InterruptedException e) {
      if (LOG.isDebugEnabled()) {
        LOG.debug("Wake from wait for root region (IE)");
      }
    }
  }
}
