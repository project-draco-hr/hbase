{
  Path mobDirPath=MobUtils.getMobFamilyPath(MobUtils.getMobRegionPath(conf,tableName),familyName);
  int count=0;
  if (fs.exists(mobDirPath)) {
    FileStatus[] files=fs.listStatus(mobDirPath);
    for (    FileStatus file : files) {
      if (isMobFile == true) {
        if (!StoreFileInfo.isDelFile(file.getPath())) {
          count++;
        }
      }
 else {
        if (StoreFileInfo.isDelFile(file.getPath())) {
          count++;
        }
      }
    }
  }
  return count;
}
