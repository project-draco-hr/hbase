{
  String value=Bytes.toString(this.zookeeperWrapper.getDataAndWatch(this.replicationZNode,this.replicationStateNodeName,new ReplicationStatusWatcher()));
  if (value != null) {
    this.replicating.set(value.equals("true"));
    LOG.info("Replication is now " + (this.replicating.get() ? "started" : "stopped"));
  }
}
