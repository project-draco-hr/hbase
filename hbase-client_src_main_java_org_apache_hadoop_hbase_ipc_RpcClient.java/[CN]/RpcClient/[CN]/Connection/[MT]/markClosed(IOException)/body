{
  if (e == null)   throw new NullPointerException();
  if (shouldCloseConnection.compareAndSet(false,true)) {
    if (LOG.isTraceEnabled()) {
      LOG.trace(getName() + ": marking at should close, reason: " + e.getMessage());
    }
    if (callSender != null) {
      callSender.close();
    }
    notifyAll();
  }
}
