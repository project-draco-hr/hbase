{
  closeConnection();
  if (curRetries >= maxRetries || ExceptionUtil.isInterrupt(ioe)) {
    throw ioe;
  }
  try {
    Thread.sleep(failureSleep);
  }
 catch (  InterruptedException ie) {
    ExceptionUtil.rethrowIfInterrupt(ie);
  }
  LOG.info("Retrying connect to server: " + remoteId.getAddress() + " after sleeping "+ failureSleep+ "ms. Already tried "+ curRetries+ " time(s).");
}
