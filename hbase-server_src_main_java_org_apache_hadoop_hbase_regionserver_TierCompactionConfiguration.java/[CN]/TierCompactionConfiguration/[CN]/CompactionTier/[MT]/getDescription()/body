{
  String ageString="INF";
  String sizeString="INF";
  if (getMaxAgeInDisk() < Long.MAX_VALUE) {
    ageString=StringUtils.formatTime(getMaxAgeInDisk());
  }
  if (getMaxSize() < Long.MAX_VALUE) {
    ageString=StringUtils.humanReadableInt(getMaxSize());
  }
  String ret="Has files upto age " + ageString + " and upto size "+ sizeString+ ". "+ "Compaction ratio: "+ (new DecimalFormat("#.##")).format(getCompactionRatio())+ ", "+ "Compaction Selection with at least "+ getMinFilesToCompact()+ " and "+ "at most "+ getMaxFilesToCompact()+ " files possible, "+ "Selections in this tier includes files up to tier "+ getEndingIndexForTier();
  return ret;
}
