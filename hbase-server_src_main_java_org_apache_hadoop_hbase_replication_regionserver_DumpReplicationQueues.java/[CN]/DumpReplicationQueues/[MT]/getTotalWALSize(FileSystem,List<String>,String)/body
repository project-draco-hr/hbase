{
  int size=0;
  FileStatus fileStatus;
  for (  String wal : wals) {
    try {
      fileStatus=(new WALLink(getConf(),server,wal)).getFileStatus(fs);
    }
 catch (    IOException e) {
      LOG.warn("WAL " + wal + " couldn't be found, skipping");
      break;
    }
    size+=fileStatus.getLen();
  }
  return size;
}
