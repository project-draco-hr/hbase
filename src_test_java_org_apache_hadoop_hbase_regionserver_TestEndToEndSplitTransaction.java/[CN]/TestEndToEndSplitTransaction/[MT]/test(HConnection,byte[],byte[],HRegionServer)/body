{
  try {
    byte[] regionName=con.relocateRegion(tableName,row).getRegionInfo().getRegionName();
    ProtobufUtil.get(server,regionName,new Get(row));
    ScanRequest scanRequest=RequestConverter.buildScanRequest(regionName,new Scan(row),1,true);
    try {
      server.scan(null,scanRequest);
    }
 catch (    ServiceException se) {
      throw ProtobufUtil.getRemoteException(se);
    }
  }
 catch (  IOException x) {
    return false;
  }
  return true;
}
