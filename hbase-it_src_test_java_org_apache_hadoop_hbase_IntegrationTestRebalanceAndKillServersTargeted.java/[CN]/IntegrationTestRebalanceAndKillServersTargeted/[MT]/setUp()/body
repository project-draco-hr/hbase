{
  Configuration conf=HBaseConfiguration.create();
  conf.set(HConnectionManager.RETRIES_BY_SERVER,"true");
  super.setUp(NUM_SLAVES_BASE,conf);
  ChaosMonkey.Policy chaosPolicy=new ChaosMonkey.PeriodicRandomActionPolicy(CHAOS_EVERY_MS,new UnbalanceKillAndRebalanceAction());
  monkey=new ChaosMonkey(util,chaosPolicy);
  monkey.start();
}
