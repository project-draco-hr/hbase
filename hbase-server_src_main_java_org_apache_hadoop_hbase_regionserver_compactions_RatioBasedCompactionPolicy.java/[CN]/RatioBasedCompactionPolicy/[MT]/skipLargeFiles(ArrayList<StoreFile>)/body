{
  int pos=0;
  while (pos < candidates.size() && !candidates.get(pos).isReference() && (candidates.get(pos).getReader().length() > comConf.getMaxCompactSize())) {
    ++pos;
  }
  if (pos > 0) {
    LOG.debug("Some files are too large. Excluding " + pos + " files from compaction candidates");
    candidates.subList(0,pos).clear();
  }
  return candidates;
}
