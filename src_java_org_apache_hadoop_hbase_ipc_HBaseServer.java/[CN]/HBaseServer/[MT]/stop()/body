{
  LOG.info("Stopping server on " + port);
  running=false;
  if (handlers != null) {
    for (int i=0; i < handlerCount; i++) {
      if (handlers[i] != null) {
        handlers[i].interrupt();
      }
    }
  }
  listener.interrupt();
  listener.doStop();
  responder.interrupt();
  notifyAll();
  if (this.rpcMetrics != null) {
    this.rpcMetrics.shutdown();
  }
}
