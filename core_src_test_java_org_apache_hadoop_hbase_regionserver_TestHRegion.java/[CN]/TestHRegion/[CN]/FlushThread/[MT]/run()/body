{
  done=false;
  while (!done) {
synchronized (this) {
      try {
        wait();
      }
 catch (      InterruptedException ignored) {
        if (done) {
          break;
        }
      }
    }
    try {
      region.flushcache();
    }
 catch (    IOException e) {
      if (!done) {
        LOG.error("Error while flusing cache",e);
        error=e;
      }
      break;
    }
  }
}
