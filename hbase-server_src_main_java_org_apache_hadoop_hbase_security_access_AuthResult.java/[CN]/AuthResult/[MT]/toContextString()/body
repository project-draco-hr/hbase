{
  StringBuilder sb=new StringBuilder();
  sb.append("(user=").append(user != null ? user.getName() : "UNKNOWN").append(", ");
  sb.append("scope=").append(table == null ? "GLOBAL" : Bytes.toString(table)).append(", ");
  sb.append("family=").append(toFamilyString()).append(", ");
  sb.append("action=").append(action != null ? action.toString() : "").append(")");
  return sb.toString();
}
