{
  if (this.closed)   throw new IOException(toString() + " closed");
  if (tableName == null || tableName.length == 0) {
    throw new IllegalArgumentException("table name cannot be null or zero length");
  }
  if (Bytes.equals(tableName,HConstants.META_TABLE_NAME)) {
    ZooKeeperKeepAliveConnection zkw=getKeepAliveZooKeeperWatcher();
    try {
      if (LOG.isTraceEnabled()) {
        LOG.trace("Looking up meta region location in ZK," + " connection=" + this);
      }
      ServerName servername=MetaRegionTracker.blockUntilAvailable(zkw,this.rpcTimeout);
      if (LOG.isTraceEnabled()) {
        LOG.debug("Looked up meta region location, connection=" + this + "; serverName="+ ((servername == null) ? "null" : servername));
      }
      if (servername == null)       return null;
      return new HRegionLocation(HRegionInfo.FIRST_META_REGIONINFO,servername,0);
    }
 catch (    InterruptedException e) {
      Thread.currentThread().interrupt();
      return null;
    }
 finally {
      zkw.close();
    }
  }
 else {
    return locateRegionInMeta(HConstants.META_TABLE_NAME,tableName,row,useCache,userRegionLock,retry);
  }
}
