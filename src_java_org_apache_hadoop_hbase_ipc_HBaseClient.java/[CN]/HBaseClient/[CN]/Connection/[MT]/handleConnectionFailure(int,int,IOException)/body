{
  try {
    socket.close();
  }
 catch (  IOException e) {
    LOG.warn("Not able to close a socket",e);
  }
  socket=null;
  if (curRetries >= maxRetries) {
    throw ioe;
  }
  try {
    Thread.sleep(1000);
  }
 catch (  InterruptedException ignored) {
  }
  LOG.info("Retrying connect to server: " + remoteId.getAddress() + ". Already tried "+ curRetries+ " time(s).");
}
