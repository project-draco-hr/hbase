{
  super.getConnection().getRegionServerWithRetries(new TransactionalServerCallable<Boolean>(super.getConnection(),super.getTableName(),batchUpdate.getRow(),transactionState){
    public Boolean call() throws IOException {
      recordServer();
      getTransactionServer().batchUpdate(transactionState.getTransactionId(),location.getRegionInfo().getRegionName(),batchUpdate);
      return null;
    }
  }
);
}
