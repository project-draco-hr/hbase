{
  return super.getConnection().getRegionServerWithRetries(new TransactionalServerCallable<RowResult>(super.getConnection(),super.getTableName(),row,transactionState){
    public RowResult call() throws IOException {
      recordServer();
      return getTransactionServer().getRow(transactionState.getTransactionId(),location.getRegionInfo().getRegionName(),row,columns,ts);
    }
  }
);
}
