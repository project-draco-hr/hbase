{
  return super.getConnection().getRegionServerWithRetries(new TransactionalServerCallable<Cell>(super.getConnection(),super.getTableName(),row,transactionState){
    public Cell call() throws IOException {
      recordServer();
      return getTransactionServer().get(transactionState.getTransactionId(),location.getRegionInfo().getRegionName(),row,column);
    }
  }
);
}
