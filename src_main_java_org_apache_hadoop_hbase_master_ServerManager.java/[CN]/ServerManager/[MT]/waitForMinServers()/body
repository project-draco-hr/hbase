{
  while (numServers() < minimumServerCount) {
    LOG.info("Waiting for enough servers to check in.  Currently have " + numServers() + " but need at least "+ minimumServerCount);
    try {
      Thread.sleep(1000);
    }
 catch (    InterruptedException e) {
      LOG.warn("Got interrupted waiting for servers to check in, looping");
    }
  }
}
