{
  AdminProtocol admin=getServerConnection(server);
  if (admin == null) {
    LOG.warn("Attempting to send OPEN RPC to server " + server.toString() + " failed because no RPC connection found to this server");
    return RegionOpeningState.FAILED_OPENING;
  }
  OpenRegionRequest request=RequestConverter.buildOpenRegionRequest(region,versionOfOfflineNode);
  try {
    OpenRegionResponse response=admin.openRegion(null,request);
    return ResponseConverter.getRegionOpeningState(response);
  }
 catch (  ServiceException se) {
    throw ProtobufUtil.getRemoteException(se);
  }
}
