{
  if (server == null)   return false;
  HRegionInterface hri=getServerConnection(server);
  if (hri == null) {
    LOG.warn("Attempting to send CLOSE RPC to server " + server.getServerName() + " failed because no RPC connection found "+ "to this server");
    return false;
  }
  return hri.closeRegion(region);
}
