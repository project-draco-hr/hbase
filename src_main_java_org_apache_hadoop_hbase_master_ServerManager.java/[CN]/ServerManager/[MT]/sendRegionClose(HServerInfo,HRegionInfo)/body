{
  if (server == null) {
    LOG.debug("Unable to send region close because server is null; region=" + region.getRegionNameAsString());
    return false;
  }
  HRegionInterface hri=getServerConnection(server);
  if (hri == null) {
    LOG.warn("Attempting to send CLOSE RPC to server " + server.getServerName() + " for region "+ region.getRegionNameAsString()+ " failed because no RPC connection found to this server");
    return false;
  }
  return hri.closeRegion(region);
}
