{
  LOG.info("BOOTSTRAP: creating ROOT and first META regions");
  try {
    HRegionInfo rootHRI=new HRegionInfo(HRegionInfo.ROOT_REGIONINFO);
    setInfoFamilyCachingForRoot(false);
    HRegionInfo metaHRI=new HRegionInfo(HRegionInfo.FIRST_META_REGIONINFO);
    setInfoFamilyCachingForMeta(false);
    HRegion root=HRegion.createHRegion(rootHRI,rd,c,HTableDescriptor.ROOT_TABLEDESC);
    HRegion meta=HRegion.createHRegion(metaHRI,rd,c,HTableDescriptor.META_TABLEDESC);
    setInfoFamilyCachingForRoot(true);
    setInfoFamilyCachingForMeta(true);
    HRegion.addRegionToMETA(root,meta);
    root.close();
    root.getLog().closeAndDelete();
    meta.close();
    meta.getLog().closeAndDelete();
  }
 catch (  IOException e) {
    e=RemoteExceptionHandler.checkIOException(e);
    LOG.error("bootstrap",e);
    throw e;
  }
}
