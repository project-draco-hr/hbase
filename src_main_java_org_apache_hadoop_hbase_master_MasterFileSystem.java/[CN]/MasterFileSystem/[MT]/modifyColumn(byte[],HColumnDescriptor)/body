{
  LOG.info("AddModifyColumn. Table = " + Bytes.toString(tableName) + " HCD = "+ hcd.toString());
  HTableDescriptor htd=getTableDescriptor(tableName);
  byte[] familyName=hcd.getName();
  if (!htd.hasFamily(familyName)) {
    throw new InvalidFamilyOperationException("Family '" + Bytes.toString(familyName) + "' doesn't exists so cannot be modified");
  }
  htd.addFamily(hcd);
  updateTableDescriptor(htd);
  return htd;
}
