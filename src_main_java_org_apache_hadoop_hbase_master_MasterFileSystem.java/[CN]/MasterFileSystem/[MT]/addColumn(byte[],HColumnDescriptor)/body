{
  LOG.info("AddColumn. Table = " + Bytes.toString(tableName) + " HCD = "+ hcd.toString());
  HTableDescriptor htd=getTableDescriptor(tableName);
  if (htd == null) {
    throw new InvalidFamilyOperationException("Family '" + hcd.getNameAsString() + "' cannot be modified as HTD is null");
  }
  htd.addFamily(hcd);
  updateTableDescriptor(htd);
  return htd;
}
