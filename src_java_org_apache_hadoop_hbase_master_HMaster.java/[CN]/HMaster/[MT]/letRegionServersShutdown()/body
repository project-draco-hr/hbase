{
  if (!fsOk) {
    return;
  }
synchronized (serversToServerInfo) {
    while (this.serversToServerInfo.size() > 0) {
      LOG.info("Waiting on following regionserver(s) to go down (or " + "region server lease expiration, whichever happens first): " + this.serversToServerInfo.values());
      try {
        serversToServerInfo.wait(threadWakeFrequency);
      }
 catch (      InterruptedException e) {
      }
    }
  }
}
