{
  this.abortable=abortable;
  long keepAlive=conf.getLong(RegionServerSnapshotManager.SNAPSHOT_TIMEOUT_MILLIS_KEY,RegionServerSnapshotManager.SNAPSHOT_TIMEOUT_MILLIS_DEFAULT);
  int threads=conf.getInt(CONCURENT_SNAPSHOT_TASKS_KEY,DEFAULT_CONCURRENT_SNAPSHOT_TASKS);
  this.name=name;
  executor=new ThreadPoolExecutor(1,threads,keepAlive,TimeUnit.MILLISECONDS,new LinkedBlockingQueue<Runnable>(),new DaemonThreadFactory("rs(" + name + ")-snapshot-pool"));
  taskPool=new ExecutorCompletionService<Void>(executor);
}
