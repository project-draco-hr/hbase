{
  Configuration conf=HBaseConfiguration.create();
  conf.setInt(HConstants.ZOOKEEPER_CLIENT_PORT,2181);
  Properties props=ZKConfig.makeZKProps(conf);
  Assert.assertEquals("Property client port should have been default from the HBase config","2181",props.getProperty("clientPort"));
  conf.setBoolean(HConstants.HBASE_CONFIG_READ_ZOOKEEPER_CONFIG,true);
  props=ZKConfig.makeZKProps(conf);
  Assert.assertEquals("Property client port should have been from zoo.cfg","9999",props.getProperty("clientPort"));
}
