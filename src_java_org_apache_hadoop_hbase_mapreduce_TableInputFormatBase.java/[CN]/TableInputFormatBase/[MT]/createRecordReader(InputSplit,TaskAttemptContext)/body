{
  TableSplit tSplit=(TableSplit)split;
  TableRecordReader trr=this.tableRecordReader;
  if (trr == null) {
    trr=new TableRecordReader();
  }
  Scan sc=new Scan(scan);
  sc.setStartRow(tSplit.getStartRow());
  sc.setStopRow(tSplit.getEndRow());
  trr.setScan(sc);
  trr.setHTable(table);
  trr.init();
  return trr;
}
