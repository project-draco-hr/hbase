{
  HTableDescriptor htd=new HTableDescriptor(tableName);
  for (  byte[] family : families) {
    HColumnDescriptor familyDesc=new HColumnDescriptor(family,HColumnDescriptor.DEFAULT_VERSIONS,HColumnDescriptor.DEFAULT_COMPRESSION,HColumnDescriptor.DEFAULT_IN_MEMORY,HColumnDescriptor.DEFAULT_BLOCKCACHE,1,HColumnDescriptor.DEFAULT_TTL,HColumnDescriptor.DEFAULT_BLOOMFILTER,HColumnDescriptor.DEFAULT_REPLICATION_SCOPE);
    htd.addFamily(familyDesc);
  }
  HRegionInfo info=new HRegionInfo(htd.getName(),null,null,false);
  Path path=new Path(DIR + callingMethod);
  region=HRegion.createHRegion(info,path,conf,htd);
  blockCache=StoreFile.getBlockCache(conf);
}
