{
  return super.getConnection().getRegionServerWithRetries(new TransactionalServerCallable<Result>(super.getConnection(),super.getTableName(),get.getRow(),transactionState){
    public Result call() throws IOException {
      recordServer();
      return getTransactionServer().get(transactionState.getTransactionId(),location.getRegionInfo().getRegionName(),get);
    }
  }
);
}
