{
  Configuration c=HBaseConfiguration.create();
  FileSystem fs;
  try {
    fs=FileSystem.get(c);
  }
 catch (  IOException e) {
    throw new RuntimeException(e);
  }
  FSTableDescriptors fstd=new FSTableDescriptors(fs,new Path(c.get(HConstants.HBASE_DIR)));
  try {
    fstd.add(newDesc);
  }
 catch (  IOException e) {
    throw new RuntimeException(e);
  }
}
