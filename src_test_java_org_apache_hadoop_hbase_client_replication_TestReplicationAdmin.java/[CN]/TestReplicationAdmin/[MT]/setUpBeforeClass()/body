{
  TEST_UTIL.startMiniZKCluster();
  Configuration conf=TEST_UTIL.getConfiguration();
  conf.setBoolean(HConstants.REPLICATION_ENABLE_KEY,true);
  admin=new ReplicationAdmin(conf);
  Path oldLogDir=new Path(TEST_UTIL.getTestDir(),HConstants.HREGION_OLDLOGDIR_NAME);
  Path logDir=new Path(TEST_UTIL.getTestDir(),HConstants.HREGION_LOGDIR_NAME);
  manager=new ReplicationSourceManager(admin.getReplicationZk(),conf,null,FileSystem.get(conf),replicating,logDir,oldLogDir);
}
