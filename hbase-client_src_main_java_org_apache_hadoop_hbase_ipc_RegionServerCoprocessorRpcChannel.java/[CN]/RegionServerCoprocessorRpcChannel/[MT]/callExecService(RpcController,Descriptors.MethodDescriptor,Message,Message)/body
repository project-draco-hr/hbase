{
  if (LOG.isTraceEnabled()) {
    LOG.trace("Call: " + method.getName() + ", "+ request.toString());
  }
  final ClientProtos.CoprocessorServiceCall call=CoprocessorRpcUtils.buildServiceCall(HConstants.EMPTY_BYTE_ARRAY,method,request);
  CoprocessorServiceResponse result=ProtobufUtil.execRegionServerService(controller,connection.getClient(serverName),call);
  Message response=null;
  if (result.getValue().hasValue()) {
    Message.Builder builder=responsePrototype.newBuilderForType();
    ProtobufUtil.mergeFrom(builder,result.getValue().getValue());
    response=builder.build();
  }
 else {
    response=responsePrototype.getDefaultInstanceForType();
  }
  if (LOG.isTraceEnabled()) {
    LOG.trace("Result is value=" + response);
  }
  return response;
}
