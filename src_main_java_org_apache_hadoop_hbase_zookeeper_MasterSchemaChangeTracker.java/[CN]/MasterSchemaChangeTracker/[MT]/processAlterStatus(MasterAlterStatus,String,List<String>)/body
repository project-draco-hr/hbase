{
  if (alterStatus.getNumberOfRegionsToProcess() == alterStatus.getNumberOfRegionsProcessed()) {
    String msg="All region servers have successfully processed the " + "schema changes for table = " + tableName + " . Deleting the schema change node for table = "+ tableName+ " Region servers processed the schema change"+ " request = "+ alterStatus.getProcessedHosts()+ " Total number of regions = "+ alterStatus.getNumberOfRegionsToProcess()+ " Processed regions = "+ alterStatus.getNumberOfRegionsProcessed();
    MonitoredTask status=TaskMonitor.get().createStatus("Checking alter schema request status for table = " + tableName);
    status.markComplete(msg);
    LOG.debug(msg);
    cleanProcessedTableNode(getSchemaChangeNodePathForTable(tableName));
  }
 else {
    if (alterStatus.getErrorCause() != null && alterStatus.getErrorCause().trim().length() > 0) {
      String msg="Alter schema change failed " + "for table = " + tableName + " Number of online regions = "+ alterStatus.getNumberOfRegionsToProcess()+ " processed regions count = "+ alterStatus.getNumberOfRegionsProcessed()+ " Original list = "+ alterStatus.hostsToProcess+ " Processed servers = "+ servers+ " Error Cause = "+ alterStatus.getErrorCause();
      MonitoredTask status=TaskMonitor.get().createStatus("Checking alter schema request status for table = " + tableName);
      LOG.debug(msg);
      status.abort(msg);
    }
 else {
      String msg="Not all region servers have processed the schema changes" + "for table = " + tableName + " Number of online regions = "+ alterStatus.getNumberOfRegionsToProcess()+ " processed regions count = "+ alterStatus.getNumberOfRegionsProcessed()+ " Original list = "+ alterStatus.hostsToProcess+ " Processed servers = "+ servers+ " Alter STate = "+ alterStatus.getCurrentAlterStatus();
      LOG.debug(msg);
    }
  }
}
