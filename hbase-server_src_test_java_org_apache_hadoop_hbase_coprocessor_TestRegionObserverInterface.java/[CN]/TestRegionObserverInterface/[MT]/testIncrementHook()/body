{
  byte[] tableName=TEST_TABLE;
  HTable table=util.createTable(tableName,new byte[][]{A,B,C});
  Increment inc=new Increment(Bytes.toBytes(0));
  inc.addColumn(A,A,1);
  verifyMethodResult(SimpleRegionObserver.class,new String[]{"hadPreIncrement","hadPostIncrement"},tableName,new Boolean[]{false,false});
  table.increment(inc);
  verifyMethodResult(SimpleRegionObserver.class,new String[]{"hadPreIncrement","hadPostIncrement"},tableName,new Boolean[]{true,true});
  util.deleteTable(tableName);
  table.close();
}
