{
  for (int i=0; i < args.length; i++) {
    if (args[i].toLowerCase().startsWith("--master:")) {
      String[] address=args[i].substring(9,args[i].length()).split(":");
      IP=address[0];
      PORT=Integer.valueOf(address[1]);
    }
 else     if (args[i].toLowerCase().startsWith("--html")) {
      HTML_OPTION=args[i];
    }
  }
}
