{
  while (!stopRequested.get()) {
    QueueEntry e=null;
    try {
      e=compactionQueue.poll(threadWakeFrequency,TimeUnit.MILLISECONDS);
    }
 catch (    InterruptedException ex) {
      continue;
    }
    if (e == null) {
      continue;
    }
    try {
      if (e.getRegion().compactIfNeeded()) {
        splitter.splitRequested(e);
      }
    }
 catch (    IOException ex) {
      LOG.error("Compaction failed for region " + e.getRegion().getRegionName(),RemoteExceptionHandler.checkIOException(ex));
      if (!checkFileSystem()) {
        break;
      }
    }
catch (    Exception ex) {
      LOG.error("Compaction failed for region " + e.getRegion().getRegionName(),ex);
      if (!checkFileSystem()) {
        break;
      }
    }
  }
  LOG.info(getName() + " exiting");
}
