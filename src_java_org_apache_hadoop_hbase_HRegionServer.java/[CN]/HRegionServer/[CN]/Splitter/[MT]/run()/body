{
  while (!stopRequested.get()) {
    QueueEntry e=null;
    try {
      e=splitQueue.poll(threadWakeFrequency,TimeUnit.MILLISECONDS);
    }
 catch (    InterruptedException ex) {
      continue;
    }
    if (e == null) {
      continue;
    }
synchronized (splitterLock) {
      try {
        split(e.getRegion());
      }
 catch (      IOException ex) {
        LOG.error("Split failed for region " + e.getRegion().getRegionName(),RemoteExceptionHandler.checkIOException(ex));
        if (!checkFileSystem()) {
          break;
        }
      }
catch (      Exception ex) {
        LOG.error("Split failed on region " + e.getRegion().getRegionName(),ex);
        if (!checkFileSystem()) {
          break;
        }
      }
    }
  }
  LOG.info(getName() + " exiting");
}
