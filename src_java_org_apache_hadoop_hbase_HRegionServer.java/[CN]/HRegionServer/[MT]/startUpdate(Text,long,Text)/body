{
  HRegion region=getRegion(regionName);
  if (region == null) {
    throw new IOException("Not serving region " + regionName);
  }
  long lockid=region.startUpdate(row);
  leases.createLease(new Text(String.valueOf(clientid)),new Text(String.valueOf(lockid)),new RegionListener(region,lockid));
  return lockid;
}
