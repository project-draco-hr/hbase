{
  Path logdir=new Path(rootDir,"log" + "_" + getThisIP() + "_"+ this.serverInfo.getStartCode()+ "_"+ this.serverInfo.getServerAddress().getPort());
  if (LOG.isDebugEnabled()) {
    LOG.debug("Log dir " + logdir);
  }
  if (fs.exists(logdir)) {
    throw new RegionServerRunningException("region server already " + "running at " + this.serverInfo.getServerAddress().toString() + " because logdir "+ logdir.toString()+ " exists");
  }
  return new HLog(fs,logdir,conf,logRoller);
}
