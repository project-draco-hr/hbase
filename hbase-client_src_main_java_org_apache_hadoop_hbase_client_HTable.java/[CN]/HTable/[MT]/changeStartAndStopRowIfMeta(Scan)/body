{
  if (scan.getStartRow() != null && scan.getStartRow().length != 0 && !isValidMetaTableRow(scan.getStartRow())) {
    scan.setStartRow(Bytes.add(scan.getStartRow(),HConstants.META_ROW_DELIMITER_BYTES,Bytes.toBytes(HConstants.ZEROES)));
  }
  if (scan.getStopRow() != null && scan.getStopRow().length != 0 && !isValidMetaTableRow(scan.getStopRow())) {
    scan.setStopRow(Bytes.add(scan.getStopRow(),HConstants.META_ROW_DELIMITER_BYTES,Bytes.toBytes(HConstants.NINES)));
  }
}
