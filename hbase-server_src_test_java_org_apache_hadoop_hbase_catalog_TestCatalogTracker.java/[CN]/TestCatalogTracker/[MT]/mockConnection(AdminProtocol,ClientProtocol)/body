{
  HConnection connection=HConnectionTestingUtility.getMockedConnection(UTIL.getConfiguration());
  Mockito.doNothing().when(connection).close();
  final HRegionLocation anyLocation=new HRegionLocation(HRegionInfo.FIRST_META_REGIONINFO,SN,HConstants.NO_SEQNUM);
  Mockito.when(connection.getRegionLocation((byte[])Mockito.any(),(byte[])Mockito.any(),Mockito.anyBoolean())).thenReturn(anyLocation);
  Mockito.when(connection.locateRegion((byte[])Mockito.any(),(byte[])Mockito.any())).thenReturn(anyLocation);
  if (admin != null) {
    Mockito.when(connection.getAdmin(Mockito.any(ServerName.class))).thenReturn(admin);
  }
  if (client != null) {
    Mockito.when(connection.getClient(Mockito.any(ServerName.class))).thenReturn(client);
  }
  return connection;
}
