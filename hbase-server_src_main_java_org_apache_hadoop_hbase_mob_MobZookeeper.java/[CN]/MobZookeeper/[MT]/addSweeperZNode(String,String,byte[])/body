{
  boolean add=false;
  String znodeName=MobUtils.getColumnFamilyZNodeName(tableName,familyName);
  try {
    add=ZKUtil.createEphemeralNodeAndWatch(zkw,ZKUtil.joinZNode(mobZnode,znodeName + SWEEPER_EPHEMERAL),data);
    if (LOG.isDebugEnabled()) {
      LOG.debug(add ? "Added a znode for sweeper " + znodeName : "Cannot add a znode for sweeper " + znodeName);
    }
  }
 catch (  KeeperException e) {
    LOG.error("Fail to add a znode for sweeper " + znodeName,e);
  }
  return add;
}
