{
  String znodeName=MobUtils.getColumnFamilyZNodeName(tableName,familyName);
  boolean locked=false;
  try {
    locked=ZKUtil.createEphemeralNodeAndWatch(zkw,ZKUtil.joinZNode(mobZnode,znodeName + LOCK_EPHEMERAL),null);
    if (LOG.isDebugEnabled()) {
      LOG.debug(locked ? "Locked the column family " + znodeName : "Can not lock the column family " + znodeName);
    }
  }
 catch (  KeeperException e) {
    LOG.error("Fail to lock the column family " + znodeName,e);
  }
  return locked;
}
