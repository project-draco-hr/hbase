{
  super.setUp();
  conf.setLong("hbase.hregion.max.filesize",256 * 1024);
  dfsCluster=new MiniDFSCluster(conf,1,true,(String[])null);
  try {
    fs=dfsCluster.getFileSystem();
    dir=new Path("/hbase");
    fs.mkdirs(dir);
    hCluster=new MiniHBaseCluster(conf,1,dfsCluster);
  }
 catch (  Exception e) {
    if (dfsCluster != null) {
      dfsCluster.shutdown();
      dfsCluster=null;
    }
    throw e;
  }
}
