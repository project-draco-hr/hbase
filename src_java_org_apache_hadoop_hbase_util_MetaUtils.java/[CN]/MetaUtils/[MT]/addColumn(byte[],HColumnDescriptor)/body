{
  List<HRegionInfo> metas=getMETARows(tableName);
  for (  HRegionInfo hri : metas) {
    final HRegion m=getMetaRegion(hri);
    scanMetaRegion(m,new ScannerListener(){
      private boolean inTable=true;
      @SuppressWarnings("synthetic-access") public boolean processRow(      HRegionInfo info) throws IOException {
        LOG.debug("Testing " + Bytes.toString(tableName) + " against "+ Bytes.toString(info.getTableDesc().getName()));
        if (Bytes.equals(info.getTableDesc().getName(),tableName)) {
          this.inTable=false;
          info.getTableDesc().addFamily(hcd);
          updateMETARegionInfo(m,info);
          return true;
        }
        return this.inTable;
      }
    }
);
  }
}
