{
  if (!initialized) {
    throw new IllegalStateException("Must call initialize method first.");
  }
  final List<HRegionInfo> result=new ArrayList<HRegionInfo>();
  scanRootRegion(new ScannerListener(){
    @SuppressWarnings("unused") public boolean processRow(    HRegionInfo info) throws IOException {
      if (Bytes.equals(info.getTableDesc().getName(),HConstants.META_TABLE_NAME)) {
        result.add(info);
        return false;
      }
      return true;
    }
  }
);
  return result;
}
