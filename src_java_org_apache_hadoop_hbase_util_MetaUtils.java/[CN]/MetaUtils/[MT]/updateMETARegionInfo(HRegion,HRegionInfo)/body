{
  BatchUpdate b=new BatchUpdate(hri.getRegionName());
  b.put(HConstants.COL_REGIONINFO,Writables.getBytes(hri));
  r.batchUpdate(b);
  if (LOG.isDebugEnabled()) {
    LOG.debug("Updated " + Bytes.toString(HConstants.COL_REGIONINFO) + " column in row "+ hri.getRegionName()+ " in "+ Bytes.toString(r.getRegionName()));
  }
}
