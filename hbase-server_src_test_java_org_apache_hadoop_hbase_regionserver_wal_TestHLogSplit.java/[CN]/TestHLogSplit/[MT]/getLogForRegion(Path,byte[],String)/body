{
  Path tdir=HTableDescriptor.getTableDir(rootdir,table);
  @SuppressWarnings("deprecation") Path editsdir=HLogUtil.getRegionDirRecoveredEditsDir(HRegion.getRegionDir(tdir,Bytes.toString(region.getBytes())));
  FileStatus[] files=this.fs.listStatus(editsdir);
  assertEquals(1,files.length);
  return files[0].getPath();
}
