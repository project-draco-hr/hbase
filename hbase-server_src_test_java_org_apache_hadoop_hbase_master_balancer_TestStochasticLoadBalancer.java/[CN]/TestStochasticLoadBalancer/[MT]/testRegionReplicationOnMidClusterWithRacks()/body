{
  conf.setLong(StochasticLoadBalancer.MAX_STEPS_KEY,4000000L);
  conf.setFloat("hbase.master.balancer.stochastic.maxMovePercent",1.0f);
  conf.setLong("hbase.master.balancer.stochastic.maxRunningTime",60 * 1000);
  loadBalancer.setConf(conf);
  int numNodes=50;
  int numRegions=numNodes * 30;
  int replication=3;
  int numRegionsPerServer=25;
  int numTables=10;
  int numRacks=4;
  Map<ServerName,List<HRegionInfo>> serverMap=createServerMap(numNodes,numRegions,numRegionsPerServer,replication,numTables);
  RackManager rm=new ForTestRackManager(numRacks);
  testWithCluster(serverMap,rm,true,true);
}
