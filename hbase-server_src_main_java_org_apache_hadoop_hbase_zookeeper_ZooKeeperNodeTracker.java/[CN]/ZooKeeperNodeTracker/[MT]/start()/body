{
  try {
    ZKUtil.waitForZKConnectionIfAuthenticating(watcher);
  }
 catch (  InterruptedException e) {
    throw new IllegalStateException("ZookeeperNodeTracker on " + this.node + " interuppted while waiting for SASL Authentication",e);
  }
  this.watcher.registerListener(this);
  try {
    if (ZKUtil.watchAndCheckExists(watcher,node)) {
      byte[] data=ZKUtil.getDataAndWatch(watcher,node);
      if (data != null) {
        this.data=data;
      }
 else {
        LOG.debug("Try starting again because there is no data from " + node);
        start();
      }
    }
  }
 catch (  KeeperException e) {
    abortable.abort("Unexpected exception during initialization, aborting",e);
  }
}
