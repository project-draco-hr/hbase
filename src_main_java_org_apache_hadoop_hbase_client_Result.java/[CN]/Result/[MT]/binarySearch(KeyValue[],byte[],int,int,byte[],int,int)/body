{
  double keyValueSize=(double)KeyValue.getKeyValueDataStructureSize(kvs[0].getRowLength(),flength,qlength,0);
  if (buffer == null || keyValueSize > buffer.length) {
    buffer=new byte[(int)Math.ceil(keyValueSize / PAD_WIDTH) * PAD_WIDTH];
  }
  KeyValue searchTerm=KeyValue.createFirstOnRow(buffer,0,kvs[0].getBuffer(),kvs[0].getRowOffset(),kvs[0].getRowLength(),family,foffset,flength,qualifier,qoffset,qlength);
  int pos=Arrays.binarySearch(kvs,searchTerm,KeyValue.COMPARATOR);
  if (pos < 0) {
    pos=(pos + 1) * -1;
  }
  if (pos == kvs.length) {
    return -1;
  }
  return pos;
}
