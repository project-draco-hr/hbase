{
  JobConf c=new JobConf(getConf(),RowCounter.class);
  c.setJobName(NAME);
  StringBuilder sb=new StringBuilder();
  final int columnoffset=2;
  for (int i=columnoffset; i < args.length; i++) {
    if (i > columnoffset) {
      sb.append(" ");
    }
    sb.append(args[i]);
  }
  TableMap.initJob(args[1],sb.toString(),this.getClass(),ImmutableBytesWritable.class,RowResult.class,c);
  c.setReducerClass(IdentityReducer.class);
  c.setOutputPath(new Path(args[0]));
  return c;
}
