{
  String value="";
  try {
    value=(this.kv.getValueLength() > MAX_VALUE_LEN) ? new String(this.kv.getValue(),0,MAX_VALUE_LEN,HConstants.UTF8_ENCODING) + "..." : new String(this.kv.getValue(),HConstants.UTF8_ENCODING);
  }
 catch (  UnsupportedEncodingException e) {
    throw new RuntimeException("UTF8 encoding not present?",e);
  }
  return this.kv.toString() + (isTransactionEntry ? "/tran=" + transactionId + "/op="+ operation.toString() : "") + "/value="+ value;
}
