{
  for (  FileStatus file : TEST_UTIL.getDFSCluster().getFileSystem().listStatus(root)) {
    if (file.isDir()) {
      LOG.debug(prefix + file.getPath().getName() + "/");
      logFSTree(file.getPath(),prefix + "---");
    }
 else {
      LOG.debug(prefix + file.getPath().getName() + "\tsz="+ file.getLen());
    }
  }
}
