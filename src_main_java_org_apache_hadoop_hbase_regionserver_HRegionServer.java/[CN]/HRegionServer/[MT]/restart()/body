{
  LOG.info("Restarting Region Server");
  abort();
  Threads.shutdown(regionServerThread);
  boolean done=false;
  while (!done) {
    try {
      reinitialize();
      done=true;
    }
 catch (    IOException e) {
      LOG.debug("Error trying to reinitialize ZooKeeper",e);
    }
  }
  Thread t=new Thread(this);
  String name=regionServerThread.getName();
  t.setName(name);
  t.start();
}
