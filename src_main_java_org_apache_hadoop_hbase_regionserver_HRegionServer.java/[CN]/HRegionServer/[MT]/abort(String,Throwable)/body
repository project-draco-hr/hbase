{
  if (cause != null) {
    LOG.fatal("Aborting region server " + this + ": "+ reason,cause);
  }
 else {
    LOG.fatal("Aborting region server " + this + ": "+ reason);
  }
  this.abortRequested=true;
  this.reservedSpace.clear();
  if (this.metrics != null) {
    LOG.info("Dump of metrics: " + this.metrics);
  }
  stop();
}
