{
  final Path oldLogDir=new Path(rootDir,HConstants.HREGION_OLDLOGDIR_NAME);
  Path logdir=new Path(rootDir,HLog.getHLogDirectoryName(this.serverNameFromMasterPOV.toString()));
  if (LOG.isDebugEnabled())   LOG.debug("logdir=" + logdir);
  if (this.fs.exists(logdir)) {
    throw new RegionServerRunningException("Region server has already " + "created directory at " + this.serverNameFromMasterPOV.toString());
  }
  createNewReplicationInstance(conf,this,this.fs,logdir,oldLogDir);
  return instantiateHLog(logdir,oldLogDir);
}
