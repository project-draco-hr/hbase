{
  checkOpen();
  if (regionName == null) {
    throw new IOException("Invalid arguments to increment " + "regionName is null");
  }
  requestCount.incrementAndGet();
  try {
    HRegion region=getRegion(regionName);
    return region.increment(increment,getLockFromId(increment.getLockId()),increment.getWriteToWAL());
  }
 catch (  IOException e) {
    checkFileSystem();
    throw e;
  }
}
