{
  checkOpen();
  if (regionName == null) {
    throw new IOException("Invalid arguments to increment " + "regionName is null");
  }
  requestCount.incrementAndGet();
  try {
    HRegion region=getRegion(regionName);
    Increment incVal=increment;
    Result resVal;
    if (region.getCoprocessorHost() != null) {
      incVal=region.getCoprocessorHost().preIncrement(incVal);
    }
    resVal=region.increment(incVal,getLockFromId(increment.getLockId()),increment.getWriteToWAL());
    if (region.getCoprocessorHost() != null) {
      resVal=region.getCoprocessorHost().postIncrement(incVal,resVal);
    }
    return resVal;
  }
 catch (  IOException e) {
    checkFileSystem();
    throw e;
  }
}
