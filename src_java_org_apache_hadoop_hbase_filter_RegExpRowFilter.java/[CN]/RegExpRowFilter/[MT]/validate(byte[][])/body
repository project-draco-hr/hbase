{
  Set<byte[]> invalids=new TreeSet<byte[]>(Bytes.BYTES_COMPARATOR);
  for (  byte[] colKey : getFilterColumns()) {
    boolean found=false;
    for (    byte[] col : columns) {
      if (Bytes.equals(col,colKey)) {
        found=true;
        break;
      }
    }
    if (!found) {
      invalids.add(colKey);
    }
  }
  if (invalids.size() > 0) {
    throw new InvalidRowFilterException(String.format("RowFilter contains criteria on columns %s not in %s",invalids,Arrays.toString(columns)));
  }
}
