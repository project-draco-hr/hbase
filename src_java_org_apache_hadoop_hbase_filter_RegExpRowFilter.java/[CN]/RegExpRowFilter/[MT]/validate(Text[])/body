{
  Set<Text> invalids=new HashSet<Text>();
  for (  Text colKey : getFilterColumns()) {
    boolean found=false;
    for (    Text col : columns) {
      if (col.equals(colKey)) {
        found=true;
        break;
      }
    }
    if (!found) {
      invalids.add(colKey);
    }
  }
  if (invalids.size() > 0) {
    throw new InvalidRowFilterException(String.format("RowFilter contains criteria on columns %s not in %s",invalids,Arrays.toString(columns)));
  }
}
