{
  openRegion(hriSecondary);
  try {
    flushRegion(hriPrimary);
    flushRegion(hriSecondary);
    Put p=new Put(row);
    p.add(f,row,row);
    table.put(p);
    flushRegion(hriPrimary);
    flushRegion(hriSecondary);
  }
  finally {
    Delete d=new Delete(row);
    table.delete(d);
    closeRegion(hriSecondary);
  }
}
