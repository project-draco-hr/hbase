{
  List<HRegionInfo> regions=MetaTableAccessor.getTableRegions(hConnection,name);
  assertEquals(regionCount,regions.size());
  Pair<HRegionInfo,ServerName> pair=MetaTableAccessor.getRegion(hConnection,regions.get(0).getRegionName());
  assertEquals(regions.get(0).getEncodedName(),pair.getFirst().getEncodedName());
  return regions;
}
