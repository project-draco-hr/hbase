{
  ConnectionInfo connInfo=getCurrentConnection();
  if (connInfo.admin == null) {
    Lock lock=locker.acquireLock(getEffectiveUser());
    try {
      if (connInfo.admin == null) {
        connInfo.admin=new HBaseAdmin(connInfo.connection);
      }
    }
  finally {
      lock.unlock();
    }
  }
  return connInfo.admin;
}
