{
  checkInitialized();
  if (cpHost != null) {
    cpHost.preTruncateTable(tableName);
  }
  LOG.info(getClientIdAuditPrefix() + " truncate " + tableName);
  long procId=this.procedureExecutor.submitProcedure(new TruncateTableProcedure(procedureExecutor.getEnvironment(),tableName,preserveSplits));
  ProcedureSyncWait.waitForProcedureToComplete(procedureExecutor,procId);
  if (cpHost != null) {
    cpHost.postTruncateTable(tableName);
  }
  return procId;
}
