{
synchronized (connections) {
    for (    AsyncRpcChannel rpcChannel : connections.values()) {
      if (rpcChannel.isAlive() && rpcChannel.address.getPort() == sn.getPort() && rpcChannel.address.getHostName().contentEquals(sn.getHostname())) {
        LOG.info("The server on " + sn.toString() + " is dead - stopping the connection "+ rpcChannel.toString());
        rpcChannel.close(null);
      }
    }
  }
}
