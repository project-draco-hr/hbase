{
  if (LOG.isDebugEnabled()) {
    LOG.debug("write backup start code to hbase:backup " + startCode);
  }
  Table table=null;
  try {
    table=connection.getTable(tableName);
    Put put=BackupSystemTableHelper.createPutForStartCode(startCode);
    table.put(put);
  }
  finally {
    if (table != null) {
      table.close();
    }
  }
}
