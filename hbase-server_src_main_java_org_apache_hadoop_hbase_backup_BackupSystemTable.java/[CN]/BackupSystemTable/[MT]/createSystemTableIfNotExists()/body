{
  Admin admin=null;
  try {
    admin=connection.getAdmin();
    if (admin.tableExists(tableName) == false) {
      HTableDescriptor tableDesc=new HTableDescriptor(tableName);
      HColumnDescriptor colDesc=new HColumnDescriptor(familyName);
      colDesc.setMaxVersions(1);
      int ttl=config.getInt(HConstants.BACKUP_SYSTEM_TTL_KEY,HConstants.BACKUP_SYSTEM_TTL_DEFAULT);
      colDesc.setTimeToLive(ttl);
      tableDesc.addFamily(colDesc);
      admin.createTable(tableDesc);
    }
  }
 catch (  IOException e) {
    LOG.error(e);
    throw e;
  }
 finally {
    if (admin != null) {
      admin.close();
    }
  }
}
