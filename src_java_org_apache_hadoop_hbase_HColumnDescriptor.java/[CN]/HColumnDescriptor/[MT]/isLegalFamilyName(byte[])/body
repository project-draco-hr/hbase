{
  if (b == null) {
    return b;
  }
  if (b[b.length - 1] != ':') {
    throw new IllegalArgumentException("Family names must end in a colon: " + Bytes.toString(b));
  }
  for (int i=0; i < (b.length - 1); i++) {
    if (Character.isISOControl(b[i])) {
      throw new IllegalArgumentException("Illegal character <" + b[i] + ">. Family names cannot contain control characters: "+ Bytes.toString(b));
    }
  }
  return b;
}
