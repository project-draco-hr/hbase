{
  incRPCcallsMetrics();
  ScanRequest request=RequestConverter.buildScanRequest(this.location.getRegionInfo().getRegionName(),this.scan,0,false);
  try {
    ScanResponse response=server.scan(null,request);
    long id=response.getScannerId();
    if (logScannerActivity) {
      LOG.info("Open scanner=" + id + " for scan="+ scan.toString()+ " on region "+ this.location.toString()+ " ip:"+ this.location.getHostnamePort());
    }
    return id;
  }
 catch (  ServiceException se) {
    throw ProtobufUtil.getRemoteException(se);
  }
}
