{
  FileSystem fs=this.parent.getFilesystem();
  Path regionDir=getSplitDirForDaughter(this.parent.getFilesystem(),this.splitdir,hri);
  HRegion r=HRegion.newHRegion(this.parent.getTableDir(),this.parent.getLog(),fs,this.parent.getConf(),hri,rsServices);
  r.readRequestsCount.set(this.parent.getReadRequestsCount() / 2);
  r.writeRequestsCount.set(this.parent.getWriteRequestsCount() / 2);
  HRegion.moveInitialFilesIntoPlace(fs,regionDir,r.getRegionDir());
  return r;
}
