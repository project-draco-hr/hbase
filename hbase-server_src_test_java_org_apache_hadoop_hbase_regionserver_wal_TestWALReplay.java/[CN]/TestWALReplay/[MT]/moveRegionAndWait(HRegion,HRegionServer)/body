{
  HMaster master=TEST_UTIL.getMiniHBaseCluster().getMaster();
  TEST_UTIL.getHBaseAdmin().move(destRegion.getRegionInfo().getEncodedNameAsBytes(),Bytes.toBytes(destServer.getServerName().getServerName()));
  while (true) {
    ServerName serverName=master.getAssignmentManager().getRegionServerOfRegion(destRegion.getRegionInfo());
    if (serverName != null && serverName.equals(destServer.getServerName()))     break;
    Thread.sleep(10);
  }
}
