{
  if (value.size() != 1) {
    throw new IOException("There should only be one input column");
  }
  Text[] keys=value.keySet().toArray(new Text[value.size()]);
  if (!keys[0].equals(TEXT_INPUT_COLUMN)) {
    throw new IOException("Wrong input column. Expected: " + INPUT_COLUMN + " but got: "+ keys[0]);
  }
  String originalValue=new String(value.get(keys[0]).getValue(),HConstants.UTF8_ENCODING);
  StringBuilder newValue=new StringBuilder();
  for (int i=originalValue.length() - 1; i >= 0; i--) {
    newValue.append(originalValue.charAt(i));
  }
  BatchUpdate outval=new BatchUpdate(key);
  outval.put(TEXT_OUTPUT_COLUMN,newValue.toString().getBytes(HConstants.UTF8_ENCODING));
  output.collect(key,outval);
}
