{
  try {
    Path tableInfoPath=getTableInfoPath(rootdir,htableDescriptor.getNameAsString());
    LOG.info("Current tableInfoPath = " + tableInfoPath);
    if (fs.exists(tableInfoPath) && fs.getFileStatus(tableInfoPath).getLen() > 0) {
      LOG.info("TableInfo already exists.. Skipping creation");
      return;
    }
    writeTableDescriptor(fs,htableDescriptor,getTablePath(rootdir,htableDescriptor.getNameAsString()));
  }
 catch (  IOException ioe) {
    LOG.info("IOException while trying to create tableInfo in HDFS",ioe);
  }
}
