{
  LOG.info("Starting testMetaWithLegacyHRI");
  final byte[] FAMILY=Bytes.toBytes("family");
  HTableDescriptor htd=new HTableDescriptor("testMetaMigration");
  HColumnDescriptor hcd=new HColumnDescriptor(FAMILY);
  htd.addFamily(hcd);
  Configuration conf=TEST_UTIL.getConfiguration();
  TEST_UTIL.createMultiRegionsWithNewHRI(conf,htd,FAMILY,new byte[][]{HConstants.EMPTY_START_ROW,Bytes.toBytes("region_a"),Bytes.toBytes("region_b")});
  List<HTableDescriptor> htds=MetaEditor.updateMetaWithNewRegionInfo(TEST_UTIL.getHBaseCluster().getMaster());
  assertEquals(3,htds.size());
}
