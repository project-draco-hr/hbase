{
  this.lock.writeLock().lock();
  HRegion region=null;
  try {
    region=onlineRegions.remove(Bytes.mapKey(hri.getRegionName()));
  }
  finally {
    this.lock.writeLock().unlock();
  }
  if (region != null) {
    region.close();
    if (reportWhenCompleted) {
      reportClose(hri);
    }
  }
}
