{
  outboundMsgs.add(new HMsg(HMsg.Type.MSG_REPORT_SPLIT,oldRegion,new Text(oldRegion.getRegionNameAsString() + " split; daughters: " + newRegionA.getRegionNameAsString()+ ", "+ newRegionB.getRegionNameAsString())));
  outboundMsgs.add(new HMsg(HMsg.Type.MSG_REPORT_OPEN,newRegionA));
  outboundMsgs.add(new HMsg(HMsg.Type.MSG_REPORT_OPEN,newRegionB));
}
