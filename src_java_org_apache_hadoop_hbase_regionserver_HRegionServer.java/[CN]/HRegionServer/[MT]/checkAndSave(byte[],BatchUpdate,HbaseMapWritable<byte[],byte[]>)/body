{
  if (b.getRow() == null)   throw new IllegalArgumentException("update has null row");
  checkOpen();
  this.requestCount.incrementAndGet();
  HRegion region=getRegion(regionName);
  validateValuesLength(b,region);
  try {
    cacheFlusher.reclaimMemcacheMemory();
    return region.checkAndSave(b,expectedValues,getLockFromId(b.getRowLock()),true);
  }
 catch (  Throwable t) {
    throw convertThrowableToIOE(cleanup(t));
  }
}
