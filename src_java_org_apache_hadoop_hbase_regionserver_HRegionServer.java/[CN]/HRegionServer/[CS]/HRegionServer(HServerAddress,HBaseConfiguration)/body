{
  this.address=address;
  this.abortRequested=false;
  this.fsOk=true;
  this.conf=conf;
  this.connection=ServerConnectionManager.getConnection(conf);
  this.isOnline=false;
  this.numRetries=conf.getInt("hbase.client.retries.number",2);
  this.threadWakeFrequency=conf.getInt(THREAD_WAKE_FREQUENCY,10 * 1000);
  this.msgInterval=conf.getInt("hbase.regionserver.msginterval",3 * 1000);
  this.serverLeaseTimeout=conf.getInt("hbase.master.lease.period",120 * 1000);
  sleeper=new Sleeper(this.msgInterval,this.stopRequested);
  this.worker=new Worker();
  this.numRegionsToReport=conf.getInt("hbase.regionserver.numregionstoreport",10);
  this.rpcTimeout=conf.getLong("hbase.regionserver.lease.period",60000);
  reinitialize();
}
