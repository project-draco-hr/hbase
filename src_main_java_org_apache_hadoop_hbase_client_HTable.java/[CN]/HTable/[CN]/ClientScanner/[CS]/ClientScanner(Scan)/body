{
  if (CLIENT_LOG.isDebugEnabled()) {
    CLIENT_LOG.debug("Creating scanner over " + Bytes.toString(getTableName()) + " starting at key '"+ Bytes.toStringBinary(scan.getStartRow())+ "'");
  }
  this.scan=scan;
  this.lastNext=System.currentTimeMillis();
  byte[] enableMetrics=scan.getAttribute(Scan.SCAN_ATTRIBUTES_METRICS_ENABLE);
  if (enableMetrics != null && Bytes.toBoolean(enableMetrics)) {
    scanMetrics=new ScanMetrics();
  }
  if (this.scan.getCaching() > 0) {
    this.caching=this.scan.getCaching();
  }
 else {
    this.caching=HTable.this.scannerCaching;
  }
}
