{
  if (append.numFamilies() == 0) {
    throw new IOException("Invalid arguments to append, no columns specified");
  }
  return connection.getRegionServerWithRetries(new ServerCallable<Result>(connection,tableName,append.getRow(),operationTimeout){
    public Result call() throws IOException {
      return server.append(location.getRegionInfo().getRegionName(),append);
    }
  }
);
}
