{
  if (!increment.hasFamilies()) {
    throw new IOException("Invalid arguments to increment, no columns specified");
  }
  return connection.getRegionServerWithRetries(new ServerCallable<Result>(connection,tableName,increment.getRow()){
    public Result call() throws IOException {
      return server.increment(location.getRegionInfo().getRegionName(),increment);
    }
  }
);
}
