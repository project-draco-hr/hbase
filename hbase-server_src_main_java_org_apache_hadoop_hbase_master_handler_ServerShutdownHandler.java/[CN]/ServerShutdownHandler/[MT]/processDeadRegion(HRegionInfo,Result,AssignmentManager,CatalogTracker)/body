{
  boolean tablePresent=assignmentManager.getZKTable().isTablePresent(hri.getTableName());
  if (!tablePresent) {
    LOG.info("The table " + hri.getTableName() + " was deleted.  Hence not proceeding.");
    return false;
  }
  boolean disabled=assignmentManager.getZKTable().isDisabledTable(hri.getTableName());
  if (disabled) {
    LOG.info("The table " + hri.getTableName() + " was disabled.  Hence not proceeding.");
    return false;
  }
  if (hri.isOffline() && hri.isSplit()) {
    return false;
  }
  boolean disabling=assignmentManager.getZKTable().isDisablingTable(hri.getTableName());
  if (disabling) {
    LOG.info("The table " + hri.getTableName() + " is disabled.  Hence not assigning region"+ hri.getEncodedName());
    return false;
  }
  return true;
}
