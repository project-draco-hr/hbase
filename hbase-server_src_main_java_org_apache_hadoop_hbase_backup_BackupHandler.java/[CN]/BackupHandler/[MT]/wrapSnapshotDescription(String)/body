{
  HBaseProtos.SnapshotDescription.Builder builder=HBaseProtos.SnapshotDescription.newBuilder();
  builder.setTable(table);
  TableName tableName=TableName.valueOf(table);
  builder.setName("snapshot_" + Long.toString(EnvironmentEdgeManager.currentTime()) + "_"+ tableName.getNamespaceAsString()+ "_"+ tableName.getQualifierAsString());
  HBaseProtos.SnapshotDescription backupSnapshot=builder.build();
  LOG.debug("Wrapped a SnapshotDescription " + backupSnapshot.getName() + " from backupContext to request snapshot for backup.");
  return backupSnapshot;
}
