{
  String znode=util.getZooKeeperWatcher().getZNodeForReplica(replicaId);
  int i=0;
  while (i < 1000) {
    if (ZKUtil.checkExists(util.getZooKeeperWatcher(),znode) == -1) {
      Thread.sleep(100);
      i++;
    }
 else     break;
  }
  if (i == 1000)   throw new IOException("znode for meta replica " + replicaId + " not available");
}
