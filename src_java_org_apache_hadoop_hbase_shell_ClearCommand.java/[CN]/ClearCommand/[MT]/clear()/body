{
  String osName=System.getProperty("os.name");
  if (osName.length() > 7 && osName.subSequence(0,7).equals("Windows")) {
    try {
      Runtime.getRuntime().exec("cls");
    }
 catch (    IOException e) {
      System.out.println("Can't clear." + e.toString());
    }
  }
 else {
    System.out.print("\033c");
  }
}
