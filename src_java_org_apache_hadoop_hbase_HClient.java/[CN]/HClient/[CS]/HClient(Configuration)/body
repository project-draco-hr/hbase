{
  this.conf=conf;
  this.batch=new AtomicReference<BatchUpdate>();
  this.currentLockId=new AtomicLong(-1L);
  this.pause=conf.getLong("hbase.client.pause",30 * 1000);
  this.numRetries=conf.getInt("hbase.client.retries.number",5);
