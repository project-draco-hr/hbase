{
  TableInfo info=null;
  BytesWritable value=null;
  for (int tries=0; tries < numRetries && info == null; tries++) {
    info=getTableInfo(row);
    try {
      value=getHRegionConnection(info.serverAddress).get(info.regionInfo.regionName,row,column);
    }
 catch (    NotServingRegionException e) {
      if (tries == numRetries - 1) {
        throw e;
      }
      findRegion(info);
      info=null;
    }
  }
  if (value != null) {
    byte[] bytes=new byte[value.getSize()];
    System.arraycopy(value.get(),0,bytes,0,bytes.length);
    return bytes;
  }
  return null;
}
