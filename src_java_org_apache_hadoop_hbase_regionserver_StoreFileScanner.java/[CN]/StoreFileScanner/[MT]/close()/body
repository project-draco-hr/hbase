{
  if (!this.scannerClosed) {
    this.store.deleteChangedReaderObserver(this);
    try {
      for (int i=0; i < readers.length; i++) {
        if (readers[i] != null) {
          try {
            readers[i].close();
          }
 catch (          IOException e) {
            LOG.error(store.storeName + " closing scanner",e);
          }
        }
      }
    }
  finally {
      this.scannerClosed=true;
    }
  }
}
