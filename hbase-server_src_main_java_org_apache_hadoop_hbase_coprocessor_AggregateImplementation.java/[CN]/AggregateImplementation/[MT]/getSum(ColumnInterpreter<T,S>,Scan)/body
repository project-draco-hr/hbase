{
  long sum=0l;
  S sumVal=null;
  T temp;
  InternalScanner scanner=((RegionCoprocessorEnvironment)getEnvironment()).getRegion().getScanner(scan);
  byte[] colFamily=scan.getFamilies()[0];
  byte[] qualifier=scan.getFamilyMap().get(colFamily).pollFirst();
  List<KeyValue> results=new ArrayList<KeyValue>();
  try {
    boolean hasMoreRows=false;
    do {
      hasMoreRows=scanner.next(results);
      for (      KeyValue kv : results) {
        temp=ci.getValue(colFamily,qualifier,kv);
        if (temp != null)         sumVal=ci.add(sumVal,ci.castToReturnType(temp));
      }
      results.clear();
    }
 while (hasMoreRows);
  }
  finally {
    scanner.close();
  }
  log.debug("Sum from this region is " + ((RegionCoprocessorEnvironment)getEnvironment()).getRegion().getRegionNameAsString() + ": "+ sum);
  return sumVal;
}
