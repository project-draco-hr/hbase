{
  final byte[] buf=new byte[chunkSize];
  int bytesRead=0;
  while (bytesRead < chunkSize) {
    final int count=in.read(buf,bytesRead,chunkSize - bytesRead);
    if (count == -1) {
      break;
    }
    bytesRead+=count;
  }
  if (bytesRead == 0) {
    return null;
  }
  return ByteString.copyFrom(buf,0,bytesRead);
}
