{
  if (!master.fsOk) {
    return;
  }
synchronized (serversToServerInfo) {
    while (serversToServerInfo.size() > 0) {
      LOG.info("Waiting on following regionserver(s) to go down (or " + "region server lease expiration, whichever happens first): " + serversToServerInfo.values());
      try {
        serversToServerInfo.wait(master.threadWakeFrequency);
      }
 catch (      InterruptedException e) {
      }
    }
  }
}
