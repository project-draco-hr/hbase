{
  for (  RegionState s : regionsToAssign) {
    LOG.info("assigning region " + Bytes.toString(s.getRegionName()) + " to the only server "+ serverName);
    s.setPendingOpen(serverName);
    this.historian.addRegionAssignment(s.getRegionInfo(),serverName);
    returnMsgs.add(new HMsg(HMsg.Type.MSG_REGION_OPEN,s.getRegionInfo(),inSafeMode()));
  }
}
