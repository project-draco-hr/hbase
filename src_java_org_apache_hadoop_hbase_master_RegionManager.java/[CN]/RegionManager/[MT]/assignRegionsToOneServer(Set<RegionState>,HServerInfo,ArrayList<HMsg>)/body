{
  for (  RegionState s : regionsToAssign) {
    LOG.info("assigning region " + Bytes.toString(s.getRegionName()) + " to the only server "+ info.getServerName());
    s.setPendingOpen(info.getServerName());
    this.historian.addRegionAssignment(s.getRegionInfo(),info.getServerName());
    returnMsgs.add(new HMsg(HMsg.Type.MSG_REGION_OPEN,s.getRegionInfo()));
  }
}
