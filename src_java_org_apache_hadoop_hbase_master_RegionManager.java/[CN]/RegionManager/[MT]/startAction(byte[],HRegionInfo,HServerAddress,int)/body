{
switch (op) {
case HConstants.MODIFY_TABLE_SPLIT:
    regionsToSplit.put(regionName,new Pair<HRegionInfo,HServerAddress>(info,server));
  break;
case HConstants.MODIFY_TABLE_COMPACT:
regionsToCompact.put(regionName,new Pair<HRegionInfo,HServerAddress>(info,server));
break;
default :
throw new IllegalArgumentException("illegal table action " + op);
}
}
