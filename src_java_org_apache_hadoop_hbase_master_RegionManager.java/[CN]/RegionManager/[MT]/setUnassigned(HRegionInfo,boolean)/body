{
synchronized (this.regionsInTransition) {
    RegionState s=regionsInTransition.get(info.getRegionName());
    if (s == null) {
      s=new RegionState(info);
      regionsInTransition.put(info.getRegionName(),s);
    }
    if (force || (!s.isAssigned() && !s.isPending())) {
      s.setUnassigned();
    }
  }
}
