{
  for (int attempt=0; attempt < zooKeeperNumRetries; ++attempt) {
    if (zooKeeperWrapper.writeRootRegionLocation(address)) {
      return;
    }
    sleep(attempt);
  }
  LOG.error("Failed to write root region location to ZooKeeper after " + zooKeeperNumRetries + " retries, shutting down");
  this.master.shutdown();
}
