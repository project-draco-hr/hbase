{
  try {
    client.openTable(HConstants.META_TABLE_NAME);
  }
 catch (  IOException e) {
    e.printStackTrace();
    fail();
  }
  this.cluster.stopRegionServer(0);
  try {
    this.cluster.regionThreads[0].join();
  }
 catch (  InterruptedException e) {
  }
  try {
    Thread.sleep(60000);
  }
 catch (  InterruptedException e) {
  }
}
