{
  if (shortName != null)   return shortName;
  try {
    shortName=(String)call(ugi,"getShortUserName",null,null);
    return shortName;
  }
 catch (  RuntimeException re) {
    throw re;
  }
catch (  Exception e) {
    throw new UndeclaredThrowableException(e,"Unexpected error getting user short name");
  }
}
