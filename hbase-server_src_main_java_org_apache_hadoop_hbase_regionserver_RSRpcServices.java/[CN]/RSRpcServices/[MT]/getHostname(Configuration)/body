{
  String hostname=conf.get(HRegionServer.HOSTNAME_KEY);
  if (hostname == null || hostname.isEmpty()) {
    return Strings.domainNamePointerToHostName(DNS.getDefaultHost(conf.get("hbase.regionserver.dns.interface","default"),conf.get("hbase.regionserver.dns.nameserver","default")));
  }
 else {
    LOG.info("hostname is configured to be " + hostname);
    return hostname;
  }
}
