{
  if (regionServer.isStopped() || regionServer.isAborted()) {
    throw new RegionServerStoppedException("Server " + regionServer.serverName + " not running"+ (regionServer.isAborted() ? ", aborting" : ""));
  }
  if (!regionServer.fsOk) {
    throw new RegionServerStoppedException("File system not available");
  }
  if (!regionServer.isOnline()) {
    throw new ServerNotRunningYetException("Server is not running yet");
  }
}
