{
  final HRegionInfo hri=HRegionInfo.FIRST_META_REGIONINFO;
  Mockito.when(this.serverManager.sendRegionClose(RANDOM_SERVERNAME,hri)).thenReturn(true);
  AssignmentManager am=new AssignmentManager(this.server,this.serverManager,this.ct,this.executor);
  RegionPlan plan=new RegionPlan(hri,SRC_SERVERNAME,RANDOM_SERVERNAME);
  am.balance(plan);
  ZKAssign.deleteClosingNode(this.watcher,hri);
}
