{
  if (this.master == null) {
    throw new MasterNotRunningException("master has been shut down");
  }
  try {
    this.master.disableTable(tableName);
  }
 catch (  RemoteException e) {
    throw RemoteExceptionHandler.decodeRemoteException(e);
  }
  for (int tries=0; (tries < numRetries) && (!isTableDisabled(tableName)); tries++) {
    if (LOG.isDebugEnabled()) {
      LOG.debug("Sleep. Waiting for all regions to be disabled from " + Bytes.toString(tableName));
    }
    try {
      Thread.sleep(getPauseTime(tries));
    }
 catch (    InterruptedException e) {
    }
    if (LOG.isDebugEnabled()) {
      LOG.debug("Wake. Waiting for all regions to be disabled from " + Bytes.toString(tableName));
    }
  }
  if (!isTableDisabled(tableName)) {
    throw new RegionException("Retries exhausted, it took too long to wait" + " for the table " + Bytes.toString(tableName) + " to be disabled.");
  }
  LOG.info("Disabled " + Bytes.toString(tableName));
}
