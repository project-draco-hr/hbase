{
  int len=(args == null) ? 0 : args.length;
  int xtraArgsCount=1;
  Object[] newargs=new Object[len + xtraArgsCount];
  newargs[0]=regionname;
  if (args != null) {
    for (int i=0; i < len; i++) {
      newargs[i + xtraArgsCount]=args[i];
    }
  }
  modifyTable(HConstants.META_TABLE_NAME,HConstants.MODIFY_CLOSE_REGION,newargs);
}
