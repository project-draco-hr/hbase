{
  startRegionOperation();
  this.readRequestsCount.increment();
  try {
    prepareScanner(scan);
    if (scan.hasFamilies()) {
      for (      byte[] family : scan.getFamilyMap().keySet()) {
        checkFamily(family);
      }
    }
    return instantiateInternalScanner(scan,additionalScanners);
  }
  finally {
    closeRegionOperation();
  }
}
