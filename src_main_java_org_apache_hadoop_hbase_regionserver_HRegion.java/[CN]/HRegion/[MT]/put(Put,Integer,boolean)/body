{
  checkReadOnly();
  checkResources();
  splitsAndClosesLock.readLock().lock();
  try {
    byte[] row=put.getRow();
    Integer lid=getLock(lockid,row,true);
    try {
      put(put.getFamilyMap(),writeToWAL);
    }
  finally {
      if (lockid == null)       releaseRowLock(lid);
    }
  }
  finally {
    splitsAndClosesLock.readLock().unlock();
  }
}
