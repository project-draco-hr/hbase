{
  boolean scanSuccessful=false;
  master.waitForRootRegionLocation();
  if (master.closed.get()) {
    return scanSuccessful;
  }
  try {
synchronized (scannerLock) {
      if (master.getRootRegionLocation() != null) {
        scanRegion(new MetaRegion(master.getRootRegionLocation(),HRegionInfo.ROOT_REGIONINFO.getRegionName()));
      }
    }
    scanSuccessful=true;
  }
 catch (  IOException e) {
    e=RemoteExceptionHandler.checkIOException(e);
    LOG.warn("Scan ROOT region",e);
    master.checkFileSystem();
  }
catch (  Exception e) {
    LOG.error("Unexpected exception",e);
  }
  return scanSuccessful;
}
