{
  master.getRegionManager().waitForRootRegionLocation();
  if (master.isClosed()) {
    return false;
  }
  try {
synchronized (scannerLock) {
      if (master.getRegionManager().getRootRegionLocation() != null) {
        scanRegion(new MetaRegion(master.getRegionManager().getRootRegionLocation(),HRegionInfo.ROOT_REGIONINFO));
      }
    }
  }
 catch (  IOException e) {
    e=RemoteExceptionHandler.checkIOException(e);
    LOG.warn("Scan ROOT region",e);
    master.checkFileSystem();
  }
catch (  Exception e) {
    LOG.error("Unexpected exception",e);
  }
  return true;
}
