{
  int absoluteIndex=replicaIndexToDeleteFrom + numReplicasToRemove;
  for (  byte[] row : metaRows) {
    Delete deleteReplicaLocations=new Delete(row);
    for (int i=replicaIndexToDeleteFrom; i < absoluteIndex; i++) {
      deleteReplicaLocations.deleteColumns(HConstants.CATALOG_FAMILY,MetaReader.getServerColumn(i));
      deleteReplicaLocations.deleteColumns(HConstants.CATALOG_FAMILY,MetaReader.getSeqNumColumn(i));
      deleteReplicaLocations.deleteColumns(HConstants.CATALOG_FAMILY,MetaReader.getStartCodeColumn(i));
    }
    deleteFromMetaTable(ct,deleteReplicaLocations);
  }
}
