{
  UserGroupInformation effectiveUser=UserGroupInformation.createProxyUser(request.getRemoteUser(),RESTServlet.getInstance().getUser());
  try {
    effectiveUser.doAs(new PrivilegedExceptionAction<Void>(){
      @Override public Void run() throws ServletException, IOException {
        callService(request,response);
        return null;
      }
    }
);
  }
 catch (  InterruptedException e) {
    Thread.currentThread().interrupt();
    throw new IOException(e);
  }
}
