{
  ClusterConnection conn=createHConnection();
  BufferedMutatorImpl mutator=new BufferedMutatorImpl(conn,null,null,new BufferedMutatorParams(DUMMY_TABLE).writeBufferSize(0));
  MyAsyncProcess ap=new MyAsyncProcess(conn,conf,true);
  mutator.ap=ap;
  Put p=createPut(1,false);
  mutator.mutate(p);
  ap.waitUntilDone();
  p=createPut(1,true);
  Assert.assertEquals(0,mutator.getWriteBuffer().size());
  try {
    mutator.mutate(p);
    Assert.fail();
  }
 catch (  RetriesExhaustedException expected) {
  }
  Assert.assertEquals("the put should not been inserted.",0,mutator.getWriteBuffer().size());
}
