{
  while (rst.isAlive()) {
    try {
      LOG.info("Waiting on " + rst.getRegionServer().getHServerInfo().toString());
      rst.join();
    }
 catch (    InterruptedException e) {
      e.printStackTrace();
    }
catch (    IOException e) {
      e.printStackTrace();
    }
  }
  for (int i=0; i < regionThreads.size(); i++) {
    if (regionThreads.get(i) == rst) {
      regionThreads.remove(i);
      break;
    }
  }
  return rst.getName();
}
