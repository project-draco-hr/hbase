{
  if (block == null) {
    block=reader.readBlock(bloc,this.cacheBlocks,this.pread);
    currBlock=bloc;
    blockFetches++;
  }
 else {
    if (bloc != currBlock) {
      block=reader.readBlock(bloc,this.cacheBlocks,this.pread);
      currBlock=bloc;
      blockFetches++;
    }
 else {
      block.rewind();
    }
  }
}
