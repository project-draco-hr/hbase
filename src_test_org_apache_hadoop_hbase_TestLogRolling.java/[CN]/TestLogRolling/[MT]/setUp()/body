{
  try {
    super.setUp();
    dfs=new MiniDFSCluster(conf,2,true,(String[])null);
    this.conf.set(HConstants.HBASE_DIR,this.dfs.getFileSystem().getHomeDirectory().toString());
  }
 catch (  Exception e) {
    StaticTestEnvironment.shutdownDfs(dfs);
    LOG.fatal("error during setUp: ",e);
    throw e;
  }
}
