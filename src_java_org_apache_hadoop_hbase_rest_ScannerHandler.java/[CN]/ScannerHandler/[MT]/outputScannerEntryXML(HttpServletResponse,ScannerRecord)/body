{
  HStoreKey key=sr.getKey();
  setResponseHeader(response,200,ContentType.XML.toString());
  XMLOutputter outputter=getXMLOutputter(response.getWriter());
  outputter.startTag(ROW);
  doElement(outputter,"name",org.apache.hadoop.hbase.util.Base64.encodeBytes(key.getRow().getBytes()));
  if (key.getColumn() != null && key.getColumn().getLength() > 0) {
    doElement(outputter,"key-column",org.apache.hadoop.hbase.util.Base64.encodeBytes(key.getColumn().getBytes()));
  }
  doElement(outputter,"timestamp",Long.toString(key.getTimestamp()));
  outputColumnsXml(outputter,sr.getValue());
  outputter.endTag();
  outputter.endDocument();
  outputter.getWriter().close();
}
