{
  ByteBuffer dstBuffer=ByteBuffer.allocate(length);
  bufferArray.getMultiple(offset,dstBuffer.remaining(),dstBuffer.array(),dstBuffer.arrayOffset());
  if (dstBuffer.limit() != length) {
    throw new RuntimeException("Only " + dstBuffer.limit() + " bytes read, "+ length+ " expected");
  }
  return new Pair<ByteBuff,MemoryType>(new SingleByteBuff(dstBuffer),MemoryType.SHARED);
}
