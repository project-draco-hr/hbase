{
  for (int i=0; i < NUM_TRANSACTIONS_PER_THREAD; i++) {
    if (stopRequest.get()) {
      return;
    }
    try {
      numRuns++;
      transaction();
    }
 catch (    UnknownTransactionException e) {
      numUnknowns++;
    }
catch (    IOException e) {
      throw new RuntimeException(e);
    }
catch (    CommitUnsuccessfulException e) {
      numAborts++;
    }
  }
}
