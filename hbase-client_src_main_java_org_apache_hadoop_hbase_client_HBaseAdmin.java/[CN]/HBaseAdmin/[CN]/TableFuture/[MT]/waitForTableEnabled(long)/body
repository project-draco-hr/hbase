{
  waitForState(deadlineTs,new WaitForStateCallable(){
    @Override public boolean checkState(    int tries) throws IOException {
      try {
        if (getAdmin().isTableAvailable(tableName)) {
          return true;
        }
      }
 catch (      TableNotFoundException tnfe) {
        LOG.debug("Table " + tableName.getNameAsString() + " was not enabled, sleeping. tries="+ tries);
      }
      return false;
    }
    @Override public void throwInterruptedException() throws InterruptedIOException {
      throw new InterruptedIOException("Interrupted when waiting for table " + tableName.getNameAsString() + " to be enabled");
    }
    @Override public void throwTimeoutException(    long elapsedTime) throws TimeoutException {
      throw new TimeoutException("Table " + tableName.getNameAsString() + " not enabled after "+ elapsedTime+ "msec");
    }
  }
);
}
