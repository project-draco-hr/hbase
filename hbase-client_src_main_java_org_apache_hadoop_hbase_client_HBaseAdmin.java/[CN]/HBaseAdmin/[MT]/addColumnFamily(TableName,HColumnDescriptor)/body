{
  AddColumnResponse response=executeCallable(new MasterCallable<AddColumnResponse>(getConnection()){
    @Override public AddColumnResponse call(    int callTimeout) throws ServiceException {
      PayloadCarryingRpcController controller=rpcControllerFactory.newController();
      controller.setCallTimeout(callTimeout);
      controller.setPriority(tableName);
      AddColumnRequest req=RequestConverter.buildAddColumnRequest(tableName,columnFamily,ng.getNonceGroup(),ng.newNonce());
      return master.addColumn(controller,req);
    }
  }
);
  return new AddColumnFamilyFuture(this,tableName,response);
}
