{
  if (!tableName.equals(htd.getTableName())) {
    throw new IllegalArgumentException("the specified table name '" + tableName + "' doesn't match with the HTD one: "+ htd.getTableName());
  }
  ModifyTableResponse response=executeCallable(new MasterCallable<ModifyTableResponse>(getConnection()){
    @Override public ModifyTableResponse call(    int callTimeout) throws ServiceException {
      ModifyTableRequest request=RequestConverter.buildModifyTableRequest(tableName,htd);
      return master.modifyTable(null,request);
    }
  }
);
  return new ModifyTableFuture(this,tableName,response);
}
