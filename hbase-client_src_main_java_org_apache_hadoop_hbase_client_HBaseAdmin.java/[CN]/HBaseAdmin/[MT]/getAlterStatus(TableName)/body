{
  return executeCallable(new MasterCallable<Pair<Integer,Integer>>(getConnection()){
    @Override public Pair<Integer,Integer> call(    int callTimeout) throws ServiceException {
      PayloadCarryingRpcController controller=rpcControllerFactory.newController();
      controller.setCallTimeout(callTimeout);
      controller.setPriority(tableName);
      GetSchemaAlterStatusRequest req=RequestConverter.buildGetSchemaAlterStatusRequest(tableName);
      GetSchemaAlterStatusResponse ret=master.getSchemaAlterStatus(controller,req);
      Pair<Integer,Integer> pair=new Pair<>(ret.getYetToUpdateRegions(),ret.getTotalRegions());
      return pair;
    }
  }
);
}
