{
  if (tableName == null)   return null;
  HTableDescriptor htd=executeCallable(new MasterCallable<HTableDescriptor>(connection){
    @Override public HTableDescriptor call(    int callTimeout) throws ServiceException {
      GetTableDescriptorsResponse htds;
      GetTableDescriptorsRequest req=RequestConverter.buildGetTableDescriptorsRequest(tableName);
      htds=master.getTableDescriptors(null,req);
      if (!htds.getTableSchemaList().isEmpty()) {
        return HTableDescriptor.convert(htds.getTableSchemaList().get(0));
      }
      return null;
    }
  }
,rpcCallerFactory,operationTimeout);
  if (htd != null) {
    return htd;
  }
  throw new TableNotFoundException(tableName.getNameAsString());
}
