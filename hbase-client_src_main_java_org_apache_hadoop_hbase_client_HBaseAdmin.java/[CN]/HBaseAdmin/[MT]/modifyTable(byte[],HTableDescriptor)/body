{
  if (!Bytes.equals(tableName,htd.getName())) {
    throw new IllegalArgumentException("the specified table name '" + Bytes.toString(tableName) + "' doesn't match with the HTD one: "+ htd.getNameAsString());
  }
  executeCallable(new MasterAdminCallable<Void>(getConnection()){
    @Override public Void call() throws ServiceException {
      ModifyTableRequest request=RequestConverter.buildModifyTableRequest(tableName,htd);
      masterAdmin.modifyTable(null,request);
      return null;
    }
  }
);
}
