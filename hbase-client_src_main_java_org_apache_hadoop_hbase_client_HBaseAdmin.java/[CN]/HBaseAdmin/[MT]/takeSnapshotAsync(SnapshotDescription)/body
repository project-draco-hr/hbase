{
  ClientSnapshotDescriptionUtils.assertSnapshotRequestIsValid(snapshot);
  final TakeSnapshotRequest request=TakeSnapshotRequest.newBuilder().setSnapshot(snapshot).build();
  return executeCallable(new MasterAdminCallable<TakeSnapshotResponse>(getConnection()){
    @Override public TakeSnapshotResponse call() throws ServiceException {
      return masterAdmin.snapshot(null,request);
    }
  }
);
}
