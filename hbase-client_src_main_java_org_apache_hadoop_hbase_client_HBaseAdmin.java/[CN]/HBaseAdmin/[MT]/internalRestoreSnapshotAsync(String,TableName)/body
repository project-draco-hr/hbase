{
  final SnapshotDescription snapshot=SnapshotDescription.newBuilder().setName(snapshotName).setTable(tableName.getNameAsString()).build();
  ClientSnapshotDescriptionUtils.assertSnapshotRequestIsValid(snapshot);
  RestoreSnapshotResponse response=executeCallable(new MasterCallable<RestoreSnapshotResponse>(getConnection()){
    @Override public RestoreSnapshotResponse call(    int callTimeout) throws ServiceException {
      final RestoreSnapshotRequest request=RestoreSnapshotRequest.newBuilder().setSnapshot(snapshot).setNonceGroup(ng.getNonceGroup()).setNonce(ng.newNonce()).build();
      PayloadCarryingRpcController controller=rpcControllerFactory.newController();
      controller.setCallTimeout(callTimeout);
      return master.restoreSnapshot(controller,request);
    }
  }
);
  return new RestoreSnapshotFuture(this,snapshot,TableName.valueOf(snapshot.getTable()),response);
}
