{
  User testGrantRevoke=User.createUserForTesting(conf,"testGrantRevoke",new String[0]);
  AccessTestAction getAction=new AccessTestAction(){
    @Override public Object run() throws Exception {
      HTable t=new HTable(conf,TEST_TABLE.getTableName());
      try {
        return t.get(new Get(TEST_ROW));
      }
  finally {
        t.close();
      }
    }
  }
;
  verifyDenied(getAction,testGrantRevoke);
  try {
    grantOnTableUsingAccessControlClient(TEST_UTIL,conf,testGrantRevoke.getShortName(),TEST_TABLE.getTableName(),null,null,Permission.Action.READ);
  }
 catch (  Throwable e) {
    LOG.error("error during call of AccessControlClient.grant. ",e);
  }
  verifyAllowed(getAction,testGrantRevoke);
  try {
    revokeFromTableUsingAccessControlClient(TEST_UTIL,conf,testGrantRevoke.getShortName(),TEST_TABLE.getTableName(),null,null,Permission.Action.READ);
  }
 catch (  Throwable e) {
    LOG.error("error during call of AccessControlClient.revoke ",e);
  }
  verifyDenied(getAction,testGrantRevoke);
}
