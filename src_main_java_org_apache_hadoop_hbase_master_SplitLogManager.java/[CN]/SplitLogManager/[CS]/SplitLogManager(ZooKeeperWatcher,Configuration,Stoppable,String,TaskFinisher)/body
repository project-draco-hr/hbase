{
  super(zkw);
  this.taskFinisher=tf;
  this.conf=conf;
  this.stopper=stopper;
  this.zkretries=conf.getLong("hbase.splitlog.zk.retries",ZKSplitLog.DEFAULT_ZK_RETRIES);
  this.resubmit_threshold=conf.getLong("hbase.splitlog.max.resubmit",ZKSplitLog.DEFAULT_MAX_RESUBMIT);
  this.timeout=conf.getInt("hbase.splitlog.manager.timeout",ZKSplitLog.DEFAULT_TIMEOUT);
  this.unassignedTimeout=conf.getInt("hbase.splitlog.manager.unassigned.timeout",ZKSplitLog.DEFAULT_UNASSIGNED_TIMEOUT);
  LOG.debug("timeout = " + timeout);
  LOG.debug("unassigned timeout = " + unassignedTimeout);
  this.serverName=serverName;
  this.timeoutMonitor=new TimeoutMonitor(conf.getInt("hbase.splitlog.manager.timeoutmonitor.period",1000),stopper);
}
