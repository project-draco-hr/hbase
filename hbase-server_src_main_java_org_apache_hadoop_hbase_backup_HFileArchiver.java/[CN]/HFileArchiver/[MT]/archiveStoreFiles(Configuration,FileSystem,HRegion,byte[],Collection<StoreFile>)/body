{
  if (fs == null) {
    LOG.warn("Passed filesystem is null, so just deleting the files without archiving for region:" + Bytes.toString(parent.getRegionName()) + ", family:"+ Bytes.toString(family));
    deleteStoreFilesWithoutArchiving(compactedFiles);
    return;
  }
  if (compactedFiles.size() == 0) {
    LOG.debug("No store files to dispose, done!");
    return;
  }
  if (parent == null || family == null)   throw new IOException("Need to have a parent region and a family to archive from.");
  Path storeArchiveDir=HFileArchiveUtil.getStoreArchivePath(conf,parent,family);
  if (!fs.mkdirs(storeArchiveDir)) {
    throw new IOException("Could not make archive directory (" + storeArchiveDir + ") for store:"+ Bytes.toString(family)+ ", deleting compacted files instead.");
  }
  LOG.debug("Archiving compacted store files.");
  StoreToFile getStorePath=new StoreToFile(fs);
  Collection<File> storeFiles=Collections2.transform(compactedFiles,getStorePath);
  if (!resolveAndArchive(fs,storeArchiveDir,storeFiles)) {
    throw new IOException("Failed to archive/delete all the files for region:" + Bytes.toString(parent.getRegionName()) + ", family:"+ Bytes.toString(family)+ " into "+ storeArchiveDir+ ". Something is probably awry on the filesystem.");
  }
}
