{
  FileSystem fs=FileSystem.get(c);
  if (!fs.exists(PERF_EVAL_DIR)) {
    fs.mkdirs(PERF_EVAL_DIR);
  }
  SimpleDateFormat formatter=new SimpleDateFormat("yyyyMMddHHmmss");
  Path subdir=new Path(PERF_EVAL_DIR,formatter.format(new Date()));
  fs.mkdirs(subdir);
  Path inputFile=new Path(subdir,"input.txt");
  PrintStream out=new PrintStream(fs.create(inputFile));
  int perClientRows=(this.R / this.N);
  try {
    for (int i=0; i < 10; i++) {
      for (int j=0; j < N; j++) {
        out.println("startRow=" + ((j * perClientRows) + (i * perClientRows)) + ", perClientRunRows="+ (perClientRows / 10)+ ", totalRows="+ this.R+ ", clients="+ this.N);
      }
    }
  }
  finally {
    out.close();
  }
  return subdir;
}
