{
synchronized (connections) {
    for (    Connection connection : connections.values()) {
      if (connection.isAlive() && connection.getRemoteAddress().getPort() == sn.getPort() && connection.getRemoteAddress().getHostName().equals(sn.getHostname())) {
        LOG.info("The server on " + sn.toString() + " is dead - stopping the connection "+ connection.remoteId);
        connection.interrupt();
      }
    }
  }
}
