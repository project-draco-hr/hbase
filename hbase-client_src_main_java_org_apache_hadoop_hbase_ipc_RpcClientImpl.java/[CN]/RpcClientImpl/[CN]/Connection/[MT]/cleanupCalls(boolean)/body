{
  Iterator<Entry<Integer,Call>> itor=calls.entrySet().iterator();
  while (itor.hasNext()) {
    Call c=itor.next().getValue();
    if (c.done) {
      itor.remove();
    }
 else     if (allCalls) {
      long waitTime=EnvironmentEdgeManager.currentTime() - c.getStartTime();
      IOException ie=new ConnectionClosingException("Connection to " + getRemoteAddress() + " is closing. Call id="+ c.id+ ", waitTime="+ waitTime);
      c.setException(ie);
      itor.remove();
    }
 else     if (c.checkAndSetTimeout()) {
      itor.remove();
    }
 else {
      break;
    }
  }
}
