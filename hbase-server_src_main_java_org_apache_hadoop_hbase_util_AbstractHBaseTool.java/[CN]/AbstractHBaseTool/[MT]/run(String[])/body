{
  if (conf == null) {
    LOG.error("Tool configuration is not initialized");
    throw new NullPointerException("conf");
  }
  CommandLine cmd;
  try {
    cmd=parseArgs(args);
    cmdLineArgs=args;
  }
 catch (  ParseException e) {
    LOG.error("Error when parsing command-line arguments",e);
    printUsage();
    return EXIT_FAILURE;
  }
  if (cmd.hasOption(SHORT_HELP_OPTION) || cmd.hasOption(LONG_HELP_OPTION) || !sanityCheckOptions(cmd)) {
    printUsage();
    return EXIT_FAILURE;
  }
  processOptions(cmd);
  int ret=EXIT_FAILURE;
  try {
    ret=doWork();
  }
 catch (  Exception e) {
    LOG.error("Error running command-line tool",e);
    return EXIT_FAILURE;
  }
  return ret;
}
