{
  boolean isValid=false;
  try {
    if (HConstants.HBASE_NON_USER_TABLE_DIRS.contains(p.toString())) {
      isValid=false;
    }
 else {
      isValid=fs.getFileStatus(p).isDir();
    }
  }
 catch (  IOException e) {
    LOG.warn("An error occurred while verifying if [" + p.toString() + "] is a valid directory. Returning 'not valid' and continuing.",e);
  }
  return isValid;
}
