{
  if (tableName.equals(TableName.META_TABLE_NAME)) {
    throw new ConstraintException("Cannot disable catalog table");
  }
  this.tableLock=this.tableLockManager.writeLock(tableName,EventType.C_M_DISABLE_TABLE.toString());
  this.tableLock.acquire();
  boolean success=false;
  try {
    if (!MetaTableAccessor.tableExists(this.server.getConnection(),tableName)) {
      throw new TableNotFoundException(tableName);
    }
    if (!skipTableStateCheck) {
      if (!this.assignmentManager.getTableStateManager().setTableStateIfInStates(this.tableName,TableState.State.DISABLING,TableState.State.ENABLED)) {
        LOG.info("Table " + tableName + " isn't enabled; skipping disable");
        throw new TableNotEnabledException(this.tableName);
      }
    }
    success=true;
  }
  finally {
    if (!success) {
      releaseTableLock();
    }
  }
  return this;
}
