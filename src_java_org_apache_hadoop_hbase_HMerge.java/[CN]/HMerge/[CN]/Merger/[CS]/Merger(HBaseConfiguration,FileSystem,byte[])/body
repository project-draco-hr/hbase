{
  this.conf=conf;
  this.fs=fs;
  this.maxFilesize=conf.getLong("hbase.hregion.max.filesize",DEFAULT_MAX_FILE_SIZE);
  this.tabledir=new Path(fs.makeQualified(new Path(conf.get(HBASE_DIR))),tableName.toString());
  Path logdir=new Path(tabledir,"merge_" + System.currentTimeMillis() + HREGION_LOGDIR_NAME);
  this.hlog=new HLog(fs,logdir,conf,null);
}
