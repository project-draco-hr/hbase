{
  if (LOG.isDebugEnabled()) {
    HRegionInfo h=(HRegionInfo)Writables.getWritable(r.get(hri.getRegionName(),HConstants.COL_REGIONINFO).getValue(),new HRegionInfo());
    LOG.debug("Old " + Bytes.toString(HConstants.COL_REGIONINFO) + " for "+ hri.toString()+ " in "+ r.toString()+ " is: "+ h.toString());
  }
  BatchUpdate b=new BatchUpdate(hri.getRegionName());
  b.put(HConstants.COL_REGIONINFO,Writables.getBytes(hri));
  r.batchUpdate(b);
  if (LOG.isDebugEnabled()) {
    HRegionInfo h=(HRegionInfo)Writables.getWritable(r.get(hri.getRegionName(),HConstants.COL_REGIONINFO).getValue(),new HRegionInfo());
    LOG.debug("New " + Bytes.toString(HConstants.COL_REGIONINFO) + " for "+ hri.toString()+ " in "+ r.toString()+ " is: "+ h.toString());
  }
}
