{
  boolean blocked=false;
  while (this.memcacheSize.get() >= this.blockingMemcacheSize) {
    if (!blocked) {
      LOG.info("Blocking updates for '" + Thread.currentThread().getName() + "' on region "+ Bytes.toString(getRegionName())+ ": Memcache size "+ StringUtils.humanReadableInt(this.memcacheSize.get())+ " is >= than blocking "+ StringUtils.humanReadableInt(this.blockingMemcacheSize)+ " size");
    }
    blocked=true;
    try {
      wait(threadWakeFrequency);
    }
 catch (    InterruptedException e) {
    }
  }
  if (blocked) {
    LOG.info("Unblocking updates for region " + this + " '"+ Thread.currentThread().getName()+ "'");
  }
}
