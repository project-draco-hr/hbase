{
  while (!server.isStopRequested()) {
    HRegion r=null;
    try {
      r=compactionQueue.poll(this.frequency,TimeUnit.MILLISECONDS);
      if (r != null) {
synchronized (regionsInQueue) {
          regionsInQueue.remove(r);
        }
        lock.lock();
        try {
          byte[] midKey=r.compactStores();
          if (midKey != null) {
            split(r,midKey);
          }
        }
  finally {
          lock.unlock();
        }
      }
    }
 catch (    InterruptedException ex) {
      continue;
    }
catch (    IOException ex) {
      LOG.error("Compaction failed" + (r != null ? (" for region " + r.getRegionName()) : ""),RemoteExceptionHandler.checkIOException(ex));
      if (!server.checkFileSystem()) {
        break;
      }
    }
catch (    Exception ex) {
      LOG.error("Compaction failed" + (r != null ? (" for region " + r.getRegionName()) : ""),ex);
      if (!server.checkFileSystem()) {
        break;
      }
    }
  }
  regionsInQueue.clear();
  compactionQueue.clear();
  LOG.info(getName() + " exiting");
}
