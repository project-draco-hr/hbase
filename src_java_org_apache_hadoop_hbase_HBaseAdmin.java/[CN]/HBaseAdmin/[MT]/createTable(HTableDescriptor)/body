{
  createTableAsync(desc);
  for (int tries=0; tries < numRetries; tries++) {
    try {
      connection.getTableServers(desc.getName());
      break;
    }
 catch (    TableNotFoundException e) {
      if (tries == numRetries - 1) {
        throw e;
      }
    }
    try {
      Thread.sleep(pause);
    }
 catch (    InterruptedException e) {
    }
  }
}
