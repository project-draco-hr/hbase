{
  HScannerInterface scanner=(ts == -1) ? table.obtainScanner(COLUMNS,HConstants.EMPTY_START_ROW) : table.obtainScanner(COLUMNS,HConstants.EMPTY_START_ROW,ts);
  try {
    HStoreKey key=new HStoreKey();
    TreeMap<Text,byte[]> results=new TreeMap<Text,byte[]>();
    int count=0;
    while (scanner.next(key,results)) {
      count++;
    }
    assertEquals(count,expectedCount);
    assertEquals(results.size(),expectedCount);
  }
  finally {
    scanner.close();
  }
}
