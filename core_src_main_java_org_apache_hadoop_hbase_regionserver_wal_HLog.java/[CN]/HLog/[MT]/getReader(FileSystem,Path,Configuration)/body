{
  try {
    if (logReaderClass == null) {
      logReaderClass=Class.forName(conf.get("hbase.regionserver.hlog.reader.impl",SequenceFileLogReader.class.getCanonicalName()));
    }
    HLog.Reader reader=(HLog.Reader)logReaderClass.newInstance();
    reader.init(fs,path,conf);
    return reader;
  }
 catch (  Exception e) {
    IOException ie=new IOException("cannot get log reader");
    ie.initCause(e);
    throw ie;
  }
}
