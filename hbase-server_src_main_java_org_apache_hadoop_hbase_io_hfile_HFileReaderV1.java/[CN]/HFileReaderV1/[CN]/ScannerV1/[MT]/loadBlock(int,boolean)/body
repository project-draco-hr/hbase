{
  if (blockBuffer == null) {
    blockBuffer=reader.readBlockBuffer(bloc,cacheBlocks,pread,isCompaction);
    currBlock=bloc;
    blockFetches++;
  }
 else {
    if (bloc != currBlock) {
      blockBuffer=reader.readBlockBuffer(bloc,cacheBlocks,pread,isCompaction);
      currBlock=bloc;
      blockFetches++;
    }
 else {
      if (rewind) {
        blockBuffer.rewind();
      }
 else {
        blockBuffer.position(blockBuffer.position() - 8);
      }
    }
  }
}
