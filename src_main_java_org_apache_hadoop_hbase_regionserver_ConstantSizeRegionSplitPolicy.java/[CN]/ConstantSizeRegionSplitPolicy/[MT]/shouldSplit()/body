{
  boolean force=region.shouldForceSplit();
  boolean foundABigStore=false;
  for (  Store store : region.getStores().values()) {
    if ((!store.canSplit())) {
      return false;
    }
    if (store.getSize() > desiredMaxFileSize) {
      foundABigStore=true;
    }
  }
  return foundABigStore || force;
}
