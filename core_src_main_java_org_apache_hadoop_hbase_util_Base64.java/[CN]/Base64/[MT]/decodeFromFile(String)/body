{
  byte[] decodedData=null;
  Base64InputStream bis=null;
  try {
    File file=new File(filename);
    byte[] buffer=null;
    if (file.length() > Integer.MAX_VALUE) {
      LOG.fatal("File is too big for this convenience method (" + file.length() + " bytes).");
      return null;
    }
    buffer=new byte[(int)file.length()];
    bis=new Base64InputStream(new BufferedInputStream(new FileInputStream(file)),DECODE);
    int length=0;
    for (int numBytes=0; (numBytes=bis.read(buffer,length,4096)) >= 0; ) {
      length+=numBytes;
    }
    decodedData=new byte[length];
    System.arraycopy(buffer,0,decodedData,0,length);
  }
 catch (  IOException e) {
    LOG.error("Error decoding from file " + filename,e);
  }
 finally {
    if (bis != null) {
      try {
        bis.close();
      }
 catch (      Exception e) {
        LOG.error("error closing Base64InputStream",e);
      }
    }
  }
  return decodedData;
}
