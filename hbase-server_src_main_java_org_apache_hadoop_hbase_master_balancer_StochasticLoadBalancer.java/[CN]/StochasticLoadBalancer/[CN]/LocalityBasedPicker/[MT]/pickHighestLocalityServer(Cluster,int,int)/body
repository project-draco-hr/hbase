{
  int[] regionLocations=cluster.regionLocations[thisRegion];
  if (regionLocations == null || regionLocations.length <= 1) {
    return pickOtherRandomServer(cluster,thisServer);
  }
  for (  int loc : regionLocations) {
    if (loc >= 0 && loc != thisServer) {
      return loc;
    }
  }
  return pickOtherRandomServer(cluster,thisServer);
}
