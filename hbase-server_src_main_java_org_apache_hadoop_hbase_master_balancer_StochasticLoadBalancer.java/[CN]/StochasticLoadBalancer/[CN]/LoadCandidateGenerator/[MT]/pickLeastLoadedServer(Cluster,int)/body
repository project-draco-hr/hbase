{
  Integer[] servers=cluster.serverIndicesSortedByRegionCount;
  if (servers.length <= 2) {
    return thisServer - 1;
  }
  int index=0;
  while (servers[index] == null || servers[index] == thisServer || cluster.isActiveMaster(index)) {
    index++;
    if (index == servers.length) {
      return -1;
    }
  }
  return servers[index];
}
