{
  double totalCost=0;
  double total=getSum(stats);
  double mean=total / ((double)stats.length);
  double count=stats.length;
  double max=((count - 1) * mean) + (total - mean);
  for (  double n : stats) {
    double diff=Math.abs(mean - n);
    totalCost+=diff;
  }
  double scaled=scale(0,max,totalCost);
  return scaled;
}
