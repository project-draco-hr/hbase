{
  if (LOG.isDebugEnabled()) {
    LOG.debug("GET " + uriInfo.getAbsolutePath() + " as "+ MIMETYPE_BINARY);
  }
  servlet.getMetrics().incrementRequests(1);
  try {
    Cell value=generator.next();
    if (value == null) {
      LOG.info("generator exhausted");
      return Response.noContent().build();
    }
    ResponseBuilder response=Response.ok(CellUtil.getValueArray(value));
    response.cacheControl(cacheControl);
    response.header("X-Row",Base64.encodeBytes(CellUtil.getRowArray(value)));
    response.header("X-Column",Base64.encodeBytes(KeyValue.makeColumn(CellUtil.getFamilyArray(value),CellUtil.getQualifierArray(value))));
    response.header("X-Timestamp",value.getTimestamp());
    servlet.getMetrics().incrementSucessfulGetRequests(1);
    return response.build();
  }
 catch (  IllegalStateException e) {
    if (ScannerResource.delete(id)) {
      servlet.getMetrics().incrementSucessfulDeleteRequests(1);
    }
 else {
      servlet.getMetrics().incrementFailedDeleteRequests(1);
    }
    servlet.getMetrics().incrementFailedGetRequests(1);
    return Response.status(Response.Status.GONE).type(MIMETYPE_TEXT).entity("Gone" + CRLF).build();
  }
}
