{
  TransactionState transactionState=transactionManager.beginTransaction();
  int row1=Bytes.toInt(table.get(transactionState,new Get(ROW1).addColumn(COL_A)).getValue(COL_A));
  int row2=Bytes.toInt(table.get(transactionState,new Get(ROW2).addColumn(COL_A)).getValue(COL_A));
  int row3=Bytes.toInt(table.get(transactionState,new Get(ROW3).addColumn(COL_A)).getValue(COL_A));
  row1-=2;
  row2+=1;
  row3+=1;
  if (flushMidWay) {
    flushRegionServer();
  }
  Put write=new Put(ROW1);
  write.add(FAMILY,QUAL_A,Bytes.toBytes(row1));
  table.put(transactionState,write);
  write=new Put(ROW2);
  write.add(FAMILY,QUAL_A,Bytes.toBytes(row2));
  table.put(transactionState,write);
  write=new Put(ROW3);
  write.add(FAMILY,QUAL_A,Bytes.toBytes(row3));
  table.put(transactionState,write);
  return transactionState;
}
