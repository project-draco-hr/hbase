{
  Scan s=new Scan();
  s.setRaw(true);
  s.setMaxVersions();
  InternalScanner scan=region.getScanner(s);
  List<KeyValue> kvs=new ArrayList<KeyValue>();
  int res=0;
  boolean hasMore;
  do {
    hasMore=scan.next(kvs);
    for (    KeyValue kv : kvs) {
      if (kv.isDelete())       res++;
    }
    kvs.clear();
  }
 while (hasMore);
  scan.close();
  return res;
}
