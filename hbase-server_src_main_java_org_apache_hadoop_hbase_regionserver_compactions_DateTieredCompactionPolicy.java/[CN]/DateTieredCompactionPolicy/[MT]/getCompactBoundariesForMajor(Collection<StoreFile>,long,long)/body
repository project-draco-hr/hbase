{
  long minTimestamp=Long.MAX_VALUE;
  for (  StoreFile file : filesToCompact) {
    minTimestamp=Math.min(minTimestamp,file.getMinimumTimestamp() == null ? Long.MAX_VALUE : file.getMinimumTimestamp());
  }
  List<Long> boundaries=new ArrayList<Long>();
  for (Window window=getIncomingWindow(now,comConf.getBaseWindowMillis()); window.compareToTimestamp(minTimestamp) > 0; window=window.nextWindow(comConf.getWindowsPerTier(),oldestToCompact)) {
    boundaries.add(window.startMillis());
  }
  boundaries.add(Long.MIN_VALUE);
  Collections.reverse(boundaries);
  return boundaries;
}
