{
  FileStatus[] directories=fs.listStatus(new Path(c.get(HConstants.HBASE_DIR)),new PathFilter(){
    public boolean accept(    Path p){
      boolean isdir=false;
      try {
        isdir=fs.getFileStatus(p).isDir();
      }
 catch (      IOException e) {
        e.printStackTrace();
      }
      return isdir;
    }
  }
);
  return true;
}
