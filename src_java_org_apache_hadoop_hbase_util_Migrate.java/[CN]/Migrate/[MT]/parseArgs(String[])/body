{
  Options opts=new Options();
  Option logFiles=OptionBuilder.withArgName("abort|ignore|delete|prompt").hasArg().withDescription("disposition of unrecovered region server logs: {abort|ignore|delete|prompt}").create("logfiles");
  Option extraFiles=OptionBuilder.withArgName("abort|ignore|delete|prompt").hasArg().withDescription("disposition of 'extra' files: {abort|ignore|delete|prompt}").create("extrafiles");
  opts.addOption(logFiles);
  opts.addOption(extraFiles);
  CommandLineParser parser=new GnuParser();
  try {
    CommandLine commandLine=parser.parse(opts,args,true);
    if (commandLine.hasOption("log-files")) {
      this.logFiles=options.get(commandLine.getOptionValue("log-files"));
    }
    if (commandLine.hasOption("extra-files")) {
      this.otherFiles=options.get(commandLine.getOptionValue("extra-files"));
    }
  }
 catch (  ParseException e) {
    LOG.error("options parsing failed",e);
    HelpFormatter formatter=new HelpFormatter();
    formatter.printHelp("options are: ",opts);
  }
}
