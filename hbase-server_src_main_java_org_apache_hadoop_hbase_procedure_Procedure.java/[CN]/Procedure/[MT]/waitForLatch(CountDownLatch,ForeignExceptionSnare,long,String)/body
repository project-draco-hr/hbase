{
  boolean released=false;
  while (!released) {
    if (monitor != null) {
      monitor.rethrowException();
    }
    ForeignExceptionDispatcher.LOG.debug("Waiting for '" + latchDescription + "' latch. (sleep:"+ wakeFrequency+ " ms)");
    released=latch.await(wakeFrequency,TimeUnit.MILLISECONDS);
  }
}
