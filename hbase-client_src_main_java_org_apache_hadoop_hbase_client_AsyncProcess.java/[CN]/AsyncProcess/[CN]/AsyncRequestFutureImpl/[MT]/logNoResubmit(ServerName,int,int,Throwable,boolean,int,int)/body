{
  if (failureCount != 0 || numAttempt > startLogErrorsCnt + 1) {
    String timeStr=new Date(errorsByServer.getStartTrackingTime()).toString();
    String logMessage=createLog(numAttempt,failureCount,0,oldServer,throwable,-1,false,timeStr,isReplica,failed,stopped);
    if (failed != 0) {
      LOG.warn(logMessage);
    }
 else {
      LOG.info(logMessage);
    }
  }
}
