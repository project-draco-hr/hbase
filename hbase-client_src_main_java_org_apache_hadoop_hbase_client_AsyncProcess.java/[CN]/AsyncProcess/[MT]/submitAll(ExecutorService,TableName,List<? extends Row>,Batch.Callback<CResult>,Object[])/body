{
  List<Action<Row>> actions=new ArrayList<Action<Row>>(rows.size());
  int posInList=-1;
  NonceGenerator ng=this.connection.getNonceGenerator();
  for (  Row r : rows) {
    posInList++;
    if (r instanceof Put) {
      Put put=(Put)r;
      if (put.isEmpty()) {
        throw new IllegalArgumentException("No columns to insert for #" + (posInList + 1) + " item");
      }
    }
    Action<Row> action=new Action<Row>(r,posInList);
    setNonce(ng,r,action);
    actions.add(action);
  }
  AsyncRequestFutureImpl<CResult> ars=createAsyncRequestFuture(tableName,actions,ng.getNonceGroup(),getPool(pool),callback,results,results != null);
  ars.groupAndSendMultiAction(actions,1);
  return ars;
}
