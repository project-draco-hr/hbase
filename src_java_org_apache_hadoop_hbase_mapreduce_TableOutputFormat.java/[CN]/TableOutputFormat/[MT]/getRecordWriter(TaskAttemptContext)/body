{
  String tableName=context.getConfiguration().get(OUTPUT_TABLE);
  HTable table=null;
  try {
    HBaseConfiguration.addHbaseResources(context.getConfiguration());
    table=new HTable(context.getConfiguration(),tableName);
  }
 catch (  IOException e) {
    LOG.error(e);
    throw e;
  }
  table.setAutoFlush(false);
  return new TableRecordWriter<KEY>(table);
}
