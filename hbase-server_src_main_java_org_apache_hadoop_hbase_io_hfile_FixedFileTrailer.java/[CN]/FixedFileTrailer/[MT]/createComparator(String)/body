{
  try {
    return getComparatorClass(comparatorClassName).newInstance();
  }
 catch (  InstantiationException e) {
    throw new IOException("Comparator class " + comparatorClassName + " is not instantiable",e);
  }
catch (  IllegalAccessException e) {
    throw new IOException("Comparator class " + comparatorClassName + " is not instantiable",e);
  }
}
