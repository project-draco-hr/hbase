{
  Configuration conf=new Configuration(CONF);
  RpcServer rpcServer=new TestFailingRpcServer(conf);
  try (AbstractRpcClient client=createRpcClient(conf)){
    rpcServer.start();
    BlockingInterface stub=newBlockingStub(client,rpcServer.getListenerAddress());
    EchoRequestProto param=EchoRequestProto.newBuilder().setMessage("hello").build();
    stub.echo(new PayloadCarryingRpcController(CellUtil.createCellScanner(ImmutableList.<Cell>of(CELL))),param);
    fail("RPC should have failed because connection closed");
  }
 catch (  ServiceException e) {
    LOG.info("Caught expected exception: " + e.toString());
  }
 finally {
    rpcServer.stop();
  }
}
