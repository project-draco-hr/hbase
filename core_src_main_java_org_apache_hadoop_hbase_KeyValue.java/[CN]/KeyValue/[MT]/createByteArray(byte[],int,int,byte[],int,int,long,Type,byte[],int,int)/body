{
  int delimiteroffset=0;
  if (column != null && column.length > 0) {
    delimiteroffset=getFamilyDelimiterIndex(column,coffset,clength);
    if (delimiteroffset > Byte.MAX_VALUE) {
      throw new IllegalArgumentException("Family > " + Byte.MAX_VALUE);
    }
  }
 else {
    return createByteArray(row,roffset,rlength,null,0,0,null,0,0,timestamp,type,value,voffset,vlength);
  }
  int flength=delimiteroffset - coffset;
  int qlength=clength - flength - 1;
  return createByteArray(row,roffset,rlength,column,coffset,flength,column,delimiteroffset + 1,qlength,timestamp,type,value,voffset,vlength);
}
