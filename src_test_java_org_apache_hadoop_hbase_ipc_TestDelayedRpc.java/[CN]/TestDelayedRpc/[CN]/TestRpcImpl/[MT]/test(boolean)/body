{
  if (!delay) {
    return UNDELAYED;
  }
  final Delayable call=HBaseServer.getCurrentCall();
  call.startDelay(delayReturnValue);
  new Thread(){
    public void run(){
      try {
        Thread.sleep(500);
        call.endDelay(delayReturnValue ? DELAYED : null);
      }
 catch (      Exception e) {
        e.printStackTrace();
      }
    }
  }
.start();
  return 0xDEADBEEF;
}
