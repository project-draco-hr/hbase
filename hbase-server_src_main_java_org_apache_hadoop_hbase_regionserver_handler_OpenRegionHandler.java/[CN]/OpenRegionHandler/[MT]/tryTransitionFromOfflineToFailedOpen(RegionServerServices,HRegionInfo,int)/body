{
  boolean result=false;
  final String name=hri.getRegionNameAsString();
  try {
    LOG.info("Opening of region " + hri + " failed, transitioning"+ " from OFFLINE to FAILED_OPEN in ZK, expecting version "+ versionOfOfflineNode);
    if (ZKAssign.transitionNode(rsServices.getZooKeeper(),hri,rsServices.getServerName(),EventType.M_ZK_REGION_OFFLINE,EventType.RS_ZK_REGION_FAILED_OPEN,versionOfOfflineNode) == -1) {
      LOG.warn("Unable to mark region " + hri + " as FAILED_OPEN. "+ "It's likely that the master already timed out this open "+ "attempt, and thus another RS already has the region.");
    }
 else {
      result=true;
    }
  }
 catch (  KeeperException e) {
    LOG.error("Failed transitioning node " + name + " from OFFLINE to FAILED_OPEN",e);
  }
  return result;
}
