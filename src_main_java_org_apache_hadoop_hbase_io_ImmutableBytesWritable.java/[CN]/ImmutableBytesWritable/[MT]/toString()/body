{
  StringBuilder sb=new StringBuilder(3 * this.bytes.length);
  for (int idx=offset; idx < offset + length; idx++) {
    if (idx != offset) {
      sb.append(' ');
    }
    String num=Integer.toHexString(bytes[idx]);
    if (num.length() < 2) {
      sb.append('0');
    }
    sb.append(num);
  }
  return sb.toString();
}
