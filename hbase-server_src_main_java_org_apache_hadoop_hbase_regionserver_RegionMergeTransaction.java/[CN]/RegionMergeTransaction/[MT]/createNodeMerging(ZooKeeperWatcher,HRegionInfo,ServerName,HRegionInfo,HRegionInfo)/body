{
  LOG.debug(zkw.prefix("Creating ephemeral node for " + region.getEncodedName() + " in MERGING state"));
  byte[] payload=HRegionInfo.toDelimitedByteArray(a,b);
  RegionTransition rt=RegionTransition.createRegionTransition(EventType.RS_ZK_REGION_MERGING,region.getRegionName(),serverName,payload);
  String node=ZKAssign.getNodeName(zkw,region.getEncodedName());
  if (!ZKUtil.createEphemeralNodeAndWatch(zkw,node,rt.toByteArray())) {
    throw new IOException("Failed create of ephemeral " + node);
  }
  return transitionNodeMerging(zkw,region,serverName,-1,a,b);
}
