{
  disableTableAsync(tableName);
  boolean disabled=false;
  for (int tries=0; tries < (this.numRetries * this.retryLongerMultiplier); tries++) {
    disabled=isTableDisabled(tableName);
    if (disabled) {
      break;
    }
    long sleep=getPauseTime(tries);
    if (LOG.isDebugEnabled()) {
      LOG.debug("Sleeping= " + sleep + "ms, waiting for all regions to be "+ "disabled in "+ Bytes.toString(tableName));
    }
    try {
      Thread.sleep(sleep);
    }
 catch (    InterruptedException e) {
      Thread.currentThread().interrupt();
      throw new IOException("Interrupted",e);
    }
  }
  if (!disabled) {
    throw new RegionException("Retries exhausted, it took too long to wait" + " for the table " + Bytes.toString(tableName) + " to be disabled.");
  }
  LOG.info("Disabled " + Bytes.toString(tableName));
}
