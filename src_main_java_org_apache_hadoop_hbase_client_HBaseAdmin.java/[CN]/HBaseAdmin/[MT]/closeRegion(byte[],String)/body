{
  CatalogTracker ct=getCatalogTracker();
  try {
    if (serverName != null) {
      Pair<HRegionInfo,ServerName> pair=MetaReader.getRegion(ct,regionname);
      if (pair == null || pair.getFirst() == null) {
        LOG.info("No region in .META. for " + Bytes.toStringBinary(regionname) + "; pair="+ pair);
      }
 else {
        closeRegion(new ServerName(serverName),pair.getFirst());
      }
    }
 else {
      Pair<HRegionInfo,ServerName> pair=MetaReader.getRegion(ct,regionname);
      if (pair == null || pair.getSecond() == null) {
        LOG.info("No server in .META. for " + Bytes.toStringBinary(regionname) + "; pair="+ pair);
      }
 else {
        closeRegion(pair.getSecond(),pair.getFirst());
      }
    }
  }
  finally {
    cleanupCatalogTracker(ct);
  }
}
