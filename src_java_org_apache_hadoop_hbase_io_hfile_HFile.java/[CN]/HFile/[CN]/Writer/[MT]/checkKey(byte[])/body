{
  if (key == null || key.length <= 0) {
    throw new IOException("Key cannot be null or empty");
  }
  if (key.length > MAXIMUM_KEY_LENGTH) {
    throw new IOException("Key length " + key.length + " > "+ MAXIMUM_KEY_LENGTH);
  }
  if (this.lastKey != null) {
    if (this.comparator.compare(this.lastKey,key) > 0) {
      throw new IOException("Added a key not lexically larger than" + " previous key=" + Bytes.toString(key) + ", lastkey="+ Bytes.toString(lastKey));
    }
  }
}
