{
  return new ConnectionAdapter(conn){
    @Override public AdminService.BlockingInterface getAdmin(    ServerName sn,    boolean getMaster) throws IOException {
      return serverName.equals(sn) ? admin : super.getAdmin(sn,getMaster);
    }
    @Override public ClientService.BlockingInterface getClient(    ServerName sn) throws IOException {
      return serverName.equals(sn) ? client : super.getClient(sn);
    }
  }
;
}
