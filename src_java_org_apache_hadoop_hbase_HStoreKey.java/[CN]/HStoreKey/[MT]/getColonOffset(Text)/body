{
  int offset=-1;
  ByteBuffer bb=ByteBuffer.wrap(col.getBytes());
  for (int lastPosition=bb.position(); bb.hasRemaining(); lastPosition=bb.position()) {
    if (Text.bytesToCodePoint(bb) == COLUMN_FAMILY_DELIMITER) {
      offset=lastPosition;
      break;
    }
  }
  if (offset < 0) {
    throw new InvalidColumnNameException(col + " is missing the colon " + "family/qualifier separator");
  }
  return offset;
}
