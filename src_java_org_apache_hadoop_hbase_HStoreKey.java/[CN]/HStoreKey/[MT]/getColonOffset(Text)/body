{
  int offset=-1;
  for (int i=0; i < col.getLength(); i++) {
    if (col.charAt(i) == COLUMN_FAMILY_DELIMITER) {
      offset=i;
      break;
    }
  }
  if (offset < 0) {
    throw new InvalidColumnNameException(col + " is missing the colon " + "family/qualifier separator");
  }
  return offset;
}
