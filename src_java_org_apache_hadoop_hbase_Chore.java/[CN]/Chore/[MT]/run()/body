{
  try {
    while (!initialChore()) {
      this.sleeper.sleep();
    }
    this.sleeper.sleep();
    while (!this.stop.get()) {
      try {
        long startTime=System.currentTimeMillis();
        chore();
        this.sleeper.sleep(startTime);
      }
 catch (      Exception e) {
        LOG.error("Caught exception",e);
      }
    }
  }
 catch (  Throwable t) {
    LOG.fatal("Caught error. Starting shutdown.",t);
    this.stop.set(true);
  }
 finally {
    LOG.info(getName() + " exiting");
  }
}
