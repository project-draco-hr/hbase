{
  if (ZKUtil.checkExists(watcher,splitOrMergeLock) != -1) {
    return false;
  }
  if (skipLock) {
    return true;
  }
  ZKUtil.createAndFailSilent(watcher,splitOrMergeLock);
  if (ZKUtil.checkExists(watcher,splitOrMergeLock) != -1) {
    saveOriginalState();
    return true;
  }
  return false;
}
