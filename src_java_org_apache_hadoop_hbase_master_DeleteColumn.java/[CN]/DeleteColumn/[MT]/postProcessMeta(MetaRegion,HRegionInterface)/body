{
  Path tabledir=new Path(this.master.rootdir,tableName.toString());
  for (  HRegionInfo i : unservedRegions) {
    i.getTableDesc().removeFamily(columnName);
    updateRegionInfo(server,m.getRegionName(),i);
    int encodedName=i.getEncodedName();
    this.master.fs.delete(HStoreFile.getMapDir(tabledir,encodedName,columnName));
    this.master.fs.delete(HStoreFile.getInfoDir(tabledir,encodedName,columnName));
  }
}
