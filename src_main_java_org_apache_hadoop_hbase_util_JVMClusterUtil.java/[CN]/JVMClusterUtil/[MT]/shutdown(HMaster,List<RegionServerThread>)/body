{
  LOG.debug("Shutting down HBase Cluster");
  if (master != null) {
    master.shutdown();
  }
  for (  Thread t : regionservers) {
    if (t.isAlive()) {
      try {
        t.join();
      }
 catch (      InterruptedException e) {
      }
    }
  }
  if (master != null) {
    while (master.isAlive()) {
      try {
        Threads.threadDumpingIsAlive(master);
      }
 catch (      InterruptedException e) {
      }
    }
  }
  LOG.info("Shutdown " + ((regionservers != null) ? master.getName() : "0 masters") + " "+ regionservers.size()+ " region server(s)");
}
