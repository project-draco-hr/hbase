{
  Compression.Algorithm comp=Compression.getCompressionAlgorithmByName(in.compression.toLowerCase());
  StoreFile.BloomType bt=BloomType.valueOf(in.bloomFilterType);
  if (in.name == null || !in.name.hasRemaining()) {
    throw new IllegalArgument("column name is empty");
  }
  byte[] parsedName=KeyValue.parseColumn(Bytes.getBytes(in.name))[0];
  HColumnDescriptor col=new HColumnDescriptor(parsedName,in.maxVersions,comp.getName(),in.inMemory,in.blockCacheEnabled,in.timeToLive,bt.toString());
  return col;
}
