{
  String table="testForceAssignWhileClosing";
  try {
    HTableDescriptor desc=new HTableDescriptor(table);
    desc.addFamily(new HColumnDescriptor(FAMILY));
    admin.createTable(desc);
    HTable meta=new HTable(conf,HConstants.META_TABLE_NAME);
    HRegionInfo hri=new HRegionInfo(desc.getName(),Bytes.toBytes("A"),Bytes.toBytes("Z"));
    MetaEditor.addRegionToMeta(meta,hri);
    HMaster master=TEST_UTIL.getHBaseCluster().getMaster();
    master.assignRegion(hri);
    AssignmentManager am=master.getAssignmentManager();
    assertTrue(am.waitForAssignment(hri));
    MockRegionObserver.enabled=true;
    am.unassign(hri);
    RegionState state=am.getRegionStates().getRegionState(hri);
    assertEquals(RegionState.State.FAILED_CLOSE,state.getState());
    MockRegionObserver.enabled=false;
    am.unassign(hri,true);
    am.assign(hri,true,true);
    assertTrue(am.waitForAssignment(hri));
    ServerName serverName=master.getAssignmentManager().getRegionStates().getRegionServerOfRegion(hri);
    TEST_UTIL.assertRegionOnServer(hri,serverName,200);
  }
  finally {
    MockRegionObserver.enabled=false;
    TEST_UTIL.deleteTable(Bytes.toBytes(table));
  }
}
