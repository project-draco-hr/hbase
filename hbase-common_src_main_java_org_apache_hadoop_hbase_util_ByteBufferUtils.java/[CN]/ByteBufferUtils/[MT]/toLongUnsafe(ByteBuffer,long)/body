{
  long ret;
  if (buf.isDirect()) {
    ret=UnsafeAccess.theUnsafe.getLong(((DirectBuffer)buf).address() + offset);
  }
 else {
    ret=UnsafeAccess.theUnsafe.getLong(buf.array(),UnsafeAccess.BYTE_ARRAY_BASE_OFFSET + buf.arrayOffset() + offset);
  }
  if (UnsafeAccess.littleEndian) {
    return Long.reverseBytes(ret);
  }
  return ret;
}
