{
  int ret;
  if (buf.isDirect()) {
    ret=UnsafeAccess.theUnsafe.getInt(((DirectBuffer)buf).address() + offset);
  }
 else {
    ret=UnsafeAccess.theUnsafe.getInt(buf.array(),UnsafeAccess.BYTE_ARRAY_BASE_OFFSET + buf.arrayOffset() + offset);
  }
  if (UnsafeAccess.littleEndian) {
    return Integer.reverseBytes(ret);
  }
  return ret;
}
