{
  if (tableName == null || tableName.getLength() == 0) {
    throw new IllegalArgumentException("table name cannot be null or zero length");
  }
  closedTables.remove(tableName);
  SortedMap<Text,HRegionLocation> tableServers=tablesToServers.get(tableName);
  if (tableServers == null) {
    if (LOG.isDebugEnabled()) {
      LOG.debug("No servers for " + tableName + ". Doing a find...");
    }
    tableServers=findServersForTable(tableName);
  }
  SortedMap<Text,HRegionLocation> servers=new TreeMap<Text,HRegionLocation>();
  servers.putAll(tableServers);
  return servers;
}
