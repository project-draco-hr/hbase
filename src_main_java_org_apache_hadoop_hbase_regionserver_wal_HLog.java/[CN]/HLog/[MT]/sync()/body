{
synchronized (this.updateLock) {
    if (this.closed) {
      return;
    }
  }
  try {
    long now=System.currentTimeMillis();
    this.writer.sync();
synchronized (this.updateLock) {
      syncTime+=System.currentTimeMillis() - now;
      syncOps++;
      if (!logRollRequested) {
        checkLowReplication();
        if (this.writer.getLength() > this.logrollsize) {
          requestLogRoll();
        }
      }
    }
  }
 catch (  IOException e) {
    LOG.fatal("Could not append. Requesting close of hlog",e);
    requestLogRoll();
    throw e;
  }
}
