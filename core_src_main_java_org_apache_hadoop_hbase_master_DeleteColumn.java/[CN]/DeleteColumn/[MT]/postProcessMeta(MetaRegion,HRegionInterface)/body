{
  for (  HRegionInfo i : unservedRegions) {
    i.getTableDesc().removeFamily(columnName);
    updateRegionInfo(server,m.getRegionName(),i);
    Path tabledir=new Path(this.master.getRootDir(),i.getTableDesc().getNameAsString());
    this.master.getFileSystem().delete(Store.getStoreHomedir(tabledir,i.getEncodedName(),this.columnName),true);
  }
}
