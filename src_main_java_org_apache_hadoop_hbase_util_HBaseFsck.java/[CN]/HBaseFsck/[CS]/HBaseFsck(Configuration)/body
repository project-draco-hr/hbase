{
  this.conf=conf;
  HBaseAdmin admin=new HBaseAdmin(conf);
  status=admin.getMaster().getClusterStatus();
  connection=admin.getConnection();
  numThreads=conf.getInt("hbasefsck.numthreads",numThreads);
  executor=new ThreadPoolExecutor(0,numThreads,THREADS_KEEP_ALIVE_SECONDS,TimeUnit.SECONDS,new LinkedBlockingQueue<Runnable>());
}
