{
  RootRegionTracker rootRegionTracker=new RootRegionTracker(this.connection.getZooKeeperWatcher(),new Abortable(){
    @Override public void abort(    String why,    Throwable e){
      LOG.error(why,e);
      System.exit(1);
    }
    @Override public boolean isAborted(){
      return false;
    }
  }
);
  rootRegionTracker.start();
  ServerName sn=null;
  try {
    sn=rootRegionTracker.getRootRegionLocation();
  }
  finally {
    rootRegionTracker.stop();
  }
  return sn;
}
