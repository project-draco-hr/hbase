{
  HRegionLocation rootLocation=connection.locateRegion(HConstants.ROOT_TABLE_NAME,HConstants.EMPTY_START_ROW);
  if (rootLocation == null || rootLocation.getRegionInfo() == null || rootLocation.getHostname() == null) {
    errors.reportError(ERROR_CODE.NULL_ROOT_REGION,"Root Region or some of its attributes are null.");
    return false;
  }
  ServerName sn;
  try {
    sn=getRootRegionServerName();
  }
 catch (  KeeperException e) {
    throw new IOException(e);
  }
  MetaEntry m=new MetaEntry(rootLocation.getRegionInfo(),sn,System.currentTimeMillis());
  HbckInfo hbInfo=new HbckInfo(m);
  regionInfoMap.put(rootLocation.getRegionInfo().getEncodedName(),hbInfo);
  return true;
}
