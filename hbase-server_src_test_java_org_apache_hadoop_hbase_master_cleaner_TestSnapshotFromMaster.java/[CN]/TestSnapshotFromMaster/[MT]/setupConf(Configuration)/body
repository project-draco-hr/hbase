{
  conf.setInt("hbase.regionsever.info.port",-1);
  conf.setInt("hbase.hregion.memstore.flush.size",25000);
  conf.setInt("hbase.hstore.compaction.min",3);
  conf.setInt("hbase.hstore.compactionThreshold",5);
