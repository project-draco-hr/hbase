{
  Runnable runnable=new Runnable(){
    public void run(){
      try {
        HTable t=new HTable(conf,TABLE_NAME);
        Scanner s=t.getScanner(new byte[][]{COL_A},HConstants.EMPTY_START_ROW);
        s.close();
      }
 catch (      IOException e) {
        LOG.fatal("could not re-open meta table because",e);
        fail();
      }
      Scanner scanner=null;
      try {
        verify(numRuns);
        LOG.info("Success!");
      }
 catch (      Exception e) {
        e.printStackTrace();
        fail();
      }
 finally {
        if (scanner != null) {
          LOG.info("Closing scanner " + scanner);
          scanner.close();
        }
      }
    }
  }
;
  return new Thread(runnable);
}
