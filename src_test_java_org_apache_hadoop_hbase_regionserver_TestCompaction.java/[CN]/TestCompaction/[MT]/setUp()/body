{
  this.cluster=new MiniDFSCluster(conf,2,true,(String[])null);
  this.conf.set(HConstants.HBASE_DIR,this.cluster.getFileSystem().getHomeDirectory().toString());
  super.setUp();
  HTableDescriptor htd=createTableDescriptor(getName());
  this.r=createNewHRegion(htd,null,null);
  this.compactionDir=HRegion.getCompactionDir(this.r.getBaseDir());
  this.regionCompactionDir=new Path(this.compactionDir,this.r.getRegionInfo().getEncodedName());
}
