{
  if (buf != null) {
    return ClassSize.align(ClassSize.OBJECT + 3 * ClassSize.REFERENCE + 3 * Bytes.SIZEOF_INT + 2 * Bytes.SIZEOF_LONG + BYTE_BUFFER_HEAP_SIZE) + ClassSize.align(buf.capacity());
  }
 else {
    return ClassSize.align(ClassSize.OBJECT + 3 * ClassSize.REFERENCE + 3 * Bytes.SIZEOF_INT + 2 * Bytes.SIZEOF_LONG + BYTE_BUFFER_HEAP_SIZE);
  }
}
