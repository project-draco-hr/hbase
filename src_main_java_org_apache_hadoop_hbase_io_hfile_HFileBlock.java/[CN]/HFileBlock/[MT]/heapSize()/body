{
  if (buf != null) {
    return ClassSize.align(ClassSize.OBJECT + 2 * ClassSize.REFERENCE + 3 * Bytes.SIZEOF_INT + 2 * Bytes.SIZEOF_LONG) + ClassSize.align(BYTE_BUFFER_HEAP_SIZE + buf.capacity());
  }
 else {
    return ClassSize.align(ClassSize.OBJECT + 2 * ClassSize.REFERENCE + 3 * Bytes.SIZEOF_INT + 2 * Bytes.SIZEOF_LONG + BYTE_BUFFER_HEAP_SIZE);
  }
}
