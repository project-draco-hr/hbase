{
  long timestamp=ts == -1 ? HConstants.LATEST_TIMESTAMP : ts;
  int numVersions=nv == -1 ? 1 : nv;
  splitsAndClosesLock.readLock().lock();
  try {
    if (this.closed.get()) {
      throw new IOException("Region " + this + " closed");
    }
    checkRow(row);
    checkColumn(column);
    List<KeyValue> result=getStore(column).get(KeyValue.createFirstOnRow(row,column,timestamp),numVersions);
    return (result == null || result.isEmpty()) ? null : result;
  }
  finally {
    splitsAndClosesLock.readLock().unlock();
  }
}
