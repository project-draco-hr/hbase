{
  boolean blocked=false;
  while (this.memstoreSize.get() > this.blockingMemStoreSize) {
    requestFlush();
    if (!blocked) {
      LOG.info("Blocking updates for '" + Thread.currentThread().getName() + "' on region "+ Bytes.toString(getRegionName())+ ": memstore size "+ StringUtils.humanReadableInt(this.memstoreSize.get())+ " is >= than blocking "+ StringUtils.humanReadableInt(this.blockingMemStoreSize)+ " size");
    }
    blocked=true;
synchronized (this) {
      try {
        wait(threadWakeFrequency);
      }
 catch (      InterruptedException e) {
      }
    }
  }
  if (blocked) {
    LOG.info("Unblocking updates for region " + this + " '"+ Thread.currentThread().getName()+ "'");
  }
}
