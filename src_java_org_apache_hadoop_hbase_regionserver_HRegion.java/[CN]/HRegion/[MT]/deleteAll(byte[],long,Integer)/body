{
  checkReadOnly();
  Integer lid=getLock(lockid,row);
  long now=System.currentTimeMillis();
  try {
    for (    Store store : stores.values()) {
      List<HStoreKey> keys=store.getKeys(new HStoreKey(row,ts),ALL_VERSIONS,now,null);
      TreeMap<HStoreKey,byte[]> edits=new TreeMap<HStoreKey,byte[]>(HStoreKey.getWritableComparator(store.getHRegionInfo()));
      for (      HStoreKey key : keys) {
        edits.put(key,HLogEdit.DELETED_BYTES);
      }
      update(edits);
    }
  }
  finally {
    if (lockid == null)     releaseRowLock(lid);
  }
}
