{
  checkRow(row);
  boolean flush=false;
  Integer lid=obtainRowLock(row);
  long result=0L;
  try {
    Store store=stores.get(family);
    Store.ValueAndSize vas=store.incrementColumnValue(row,family,qualifier,amount);
    result=vas.value;
    long size=this.memcacheSize.addAndGet(vas.sizeAdded);
    flush=isFlushSize(size);
  }
  finally {
    releaseRowLock(lid);
  }
  if (flush) {
    requestFlush();
  }
  return result;
}
