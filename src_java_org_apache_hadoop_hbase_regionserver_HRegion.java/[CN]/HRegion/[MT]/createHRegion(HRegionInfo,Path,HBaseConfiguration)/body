{
  Path tableDir=HTableDescriptor.getTableDir(rootDir,info.getTableDesc().getName());
  Path regionDir=HRegion.getRegionDir(tableDir,info.getEncodedName());
  FileSystem fs=FileSystem.get(conf);
  fs.mkdirs(regionDir);
  if (!info.isMetaRegion()) {
    RegionHistorian.getInstance().addRegionCreation(info);
  }
  HRegion region=new HRegion(tableDir,new HLog(fs,new Path(regionDir,HREGION_LOGDIR_NAME),conf,null),fs,conf,info,null);
  region.initialize(null,null);
  return region;
}
