{
  LOG.info("Starting mini mapreduce cluster...");
  if (dataTestDir == null) {
    setupDataTestDir();
  }
  conf.set("mapred.output.dir",conf.get("hadoop.tmp.dir"));
  mrCluster=new MiniMRCluster(0,0,servers,FileSystem.get(conf).getUri().toString(),1,null,null,null,new JobConf(conf));
  mrCluster.getJobTrackerRunner().getJobTracker().getConf().set("mapred.local.dir",conf.get("mapred.local.dir"));
  LOG.info("Mini mapreduce cluster started");
  conf.set("mapred.job.tracker",mrCluster.createJobConf().get("mapred.job.tracker"));
  conf.set("mapreduce.framework.name","yarn");
}
