{
  TableName tn=TableName.valueOf(r.getTableName().toByteArray());
  HLogKey key=new HLogKey(info.getEncodedNameAsBytes(),tn);
  long trx=log.appendNoSync(htd,info,key,WALEdit.createRegionEventWALEdit(info,r),sequenceId,false,null);
  log.sync(trx);
  if (LOG.isTraceEnabled()) {
    LOG.trace("Appended region event marker " + TextFormat.shortDebugString(r));
  }
  return trx;
}
