{
  if (LOG.isDebugEnabled())   LOG.debug(getName() + ": starting, having connections " + connections.size());
  try {
    while (waitForWork()) {
      receiveResponse();
    }
  }
 catch (  Throwable t) {
    LOG.warn("Unexpected exception receiving call responses",t);
    markClosed(new IOException("Unexpected exception receiving call responses",t));
  }
  close();
  if (LOG.isDebugEnabled())   LOG.debug(getName() + ": stopped, remaining connections " + connections.size());
}
