{
  this(store,false,scan,null,scanInfo.getTtl(),scanInfo.getMinVersions(),((HStore)store).getHRegion().getReadpoint(IsolationLevel.READ_COMMITTED));
  if (dropDeletesFromRow == null) {
    matcher=new ScanQueryMatcher(scan,scanInfo,null,scanType,smallestReadPoint,earliestPutTs,oldestUnexpiredTS,now,store.getCoprocessorHost());
  }
 else {
    matcher=new ScanQueryMatcher(scan,scanInfo,null,smallestReadPoint,earliestPutTs,oldestUnexpiredTS,now,dropDeletesFromRow,dropDeletesToRow,store.getCoprocessorHost());
  }
  scanners=selectScannersFrom(scanners);
  seekScanners(scanners,matcher.getStartKey(),false,isParallelSeekEnabled);
  resetKVHeap(scanners,store.getComparator());
}
