{
  List scanners=StoreFileScanner.getScannersForStoreFiles(filesToCompact,false,true,false,null,HConstants.LATEST_TIMESTAMP);
  Scan scan=new Scan();
  scan.setMaxVersions(column.getMaxVersions());
  long ttl=HStore.determineTTLFromFamily(column);
  ScanInfo scanInfo=new ScanInfo(column,ttl,0,KeyValue.COMPARATOR);
  StoreScanner scanner=new StoreScanner(scan,scanInfo,scanType,null,scanners,0L,HConstants.LATEST_TIMESTAMP);
  return scanner;
}
