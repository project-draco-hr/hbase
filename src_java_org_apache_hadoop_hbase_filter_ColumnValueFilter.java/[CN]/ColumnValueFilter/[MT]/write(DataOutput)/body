{
  if (value == null) {
    out.writeInt(0);
  }
 else {
    out.writeInt(value.length);
    out.write(value);
  }
  Bytes.writeByteArray(out,columnName);
  out.writeUTF(compareOp.name());
  ObjectWritable.writeObject(out,comparator,WritableByteArrayComparable.class,new HBaseConfiguration());
  out.writeBoolean(filterIfColumnMissing);
}
