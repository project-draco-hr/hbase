{
  if (!fsOk) {
    return false;
  }
  if (!(leases.isAlive() && cacheFlusher.isAlive() && hlogRoller.isAlive()&& this.compactionChecker.isAlive()&& this.periodicFlusher.isAlive())) {
    stop("One or more threads are no longer alive -- stop");
    return false;
  }
  if (metaHLogRoller != null && !metaHLogRoller.isAlive()) {
    stop("Meta HLog roller thread is no longer alive -- stop");
    return false;
  }
  return true;
}
