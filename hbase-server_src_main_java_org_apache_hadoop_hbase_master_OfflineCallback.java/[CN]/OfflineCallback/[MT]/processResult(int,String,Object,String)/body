{
  if (rc == KeeperException.Code.NODEEXISTS.intValue()) {
    LOG.warn("Node for " + path + " already exists");
  }
 else   if (rc != 0) {
    LOG.warn("rc != 0 for " + path + " -- retryable connectionloss -- "+ "FIX see http://wiki.apache.org/hadoop/ZooKeeper/FAQ#A2");
    this.zkw.abort("Connectionloss writing unassigned at " + path + ", rc="+ rc,null);
    return;
  }
  if (LOG.isDebugEnabled()) {
    LOG.debug("rs=" + (RegionState)ctx + ", server="+ this.destination.toString());
  }
  ZooKeeper zk=this.zkw.getRecoverableZooKeeper().getZooKeeper();
  zk.exists(path,this.zkw,callBack,ctx);
}
