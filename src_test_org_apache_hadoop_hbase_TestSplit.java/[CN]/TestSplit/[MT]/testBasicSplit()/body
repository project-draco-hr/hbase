{
  HRegion region=null;
  HLog hlog=new HLog(this.fs,this.testDir,this.conf);
  try {
    HTableDescriptor htd=createTableDescriptor(getName());
    HRegionInfo hri=new HRegionInfo(1,htd,null,null);
    region=new HRegion(testDir,hlog,fs,this.conf,hri,null);
    basicSplit(region);
  }
  finally {
    if (region != null) {
      region.close();
    }
    hlog.closeAndDelete();
  }
}
