{
  HRegionInfo result=null;
  HScannerInterface s=t.obtainScanner(HConstants.COL_REGIONINFO_ARRAY,HConstants.EMPTY_START_ROW,System.currentTimeMillis(),null);
  try {
    HStoreKey curKey=new HStoreKey();
    TreeMap<Text,byte[]> curVals=new TreeMap<Text,byte[]>();
    while (s.next(curKey,curVals)) {
      byte[] bytes=curVals.get(HConstants.COL_REGIONINFO);
      if (bytes == null || bytes.length == 0) {
        continue;
      }
      HRegionInfo hri=(HRegionInfo)Writables.getWritable(bytes,new HRegionInfo());
      if (hri.isSplit() && hri.isOffline()) {
        result=hri;
        break;
      }
    }
    return result;
  }
  finally {
    s.close();
  }
}
