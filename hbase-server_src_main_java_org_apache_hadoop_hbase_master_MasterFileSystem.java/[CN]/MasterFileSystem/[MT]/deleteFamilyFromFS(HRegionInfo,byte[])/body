{
  Path delDir=new Path(rootdir,new Path(region.getTableNameAsString(),new Path(region.getEncodedName(),new Path(Bytes.toString(familyName)))));
  if (fs.delete(delDir,true) == false) {
    throw new IOException("Could not delete family " + Bytes.toString(familyName) + " from FileSystem for region "+ region.getRegionNameAsString()+ "("+ region.getEncodedName()+ ")");
  }
}
