{
  if (LOG.isDebugEnabled()) {
    LOG.info("closing HStore for " + this.storeName);
  }
  this.lock.obtainWriteLock();
  try {
    for (    MapFile.Reader map : maps.values()) {
      map.close();
    }
    maps.clear();
    mapFiles.clear();
    LOG.info("HStore closed for " + this.storeName);
  }
  finally {
    this.lock.releaseWriteLock();
  }
}
