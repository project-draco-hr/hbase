{
  if (!scannerClosed) {
    try {
      for (int i=0; i < readers.length; i++) {
        if (readers[i] != null) {
          try {
            readers[i].close();
          }
 catch (          IOException e) {
            LOG.error(storeName + " closing scanner",e);
          }
        }
      }
    }
  finally {
      scannerClosed=true;
    }
  }
}
