{
  this.conf=conf;
  this.path=path;
  this.fs=fs;
  this.fileLength=this.fs.getFileStatus(path).getLen();
  this.trailerWarnSize=conf.getInt(HLog.WAL_TRAILER_WARN_SIZE,HLog.DEFAULT_WAL_TRAILER_WARN_SIZE);
  initReader(stream);
  boolean compression=hasCompression();
  if (compression) {
    try {
      if (compressionContext == null) {
        compressionContext=new CompressionContext(LRUDictionary.class,FSUtils.isRecoveredEdits(path));
      }
 else {
        compressionContext.clear();
      }
    }
 catch (    Exception e) {
      throw new IOException("Failed to initialize CompressionContext",e);
    }
  }
  initAfterCompression();
}
