{
  boolean intransistion=processRegionInTransition(hri.getEncodedName(),hri,null);
  if (!intransistion)   return intransistion;
  LOG.debug("Waiting on " + HRegionInfo.prettyPrint(hri.getEncodedName()));
synchronized (this.regionsInTransition) {
    while (!this.master.isStopped() && this.regionsInTransition.containsKey(hri.getEncodedName())) {
      this.regionsInTransition.wait(100);
    }
  }
  return intransistion;
}
