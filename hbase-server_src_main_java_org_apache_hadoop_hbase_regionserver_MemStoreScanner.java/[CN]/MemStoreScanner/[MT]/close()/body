{
  if (forwardHeap != null) {
    assert((type == Type.USER_SCAN_FORWARD) || (type == Type.COMPACT_FORWARD) || (type == Type.UNDEFINED));
    forwardHeap.close();
    forwardHeap=null;
    if (backwardHeap != null) {
      backwardHeap.close();
      backwardHeap=null;
    }
  }
 else   if (backwardHeap != null) {
    assert(type == Type.USER_SCAN_BACKWARD);
    backwardHeap.close();
    backwardHeap=null;
  }
}
