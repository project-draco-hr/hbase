{
  int count=0;
  for (  StoreFile f : this.r.stores.get(Bytes.mapKey(COLUMN_FAMILY_TEXT_MINUS_COLON)).getStorefiles().values()) {
    HFileScanner scanner=f.getReader().getScanner();
    if (!scanner.seekTo()) {
      continue;
    }
    do {
      count++;
    }
 while (scanner.next());
  }
  return count;
}
