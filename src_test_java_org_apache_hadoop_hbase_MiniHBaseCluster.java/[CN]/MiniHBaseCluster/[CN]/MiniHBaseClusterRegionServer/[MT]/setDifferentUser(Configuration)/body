{
  FileSystem currentfs=FileSystem.get(c);
  if (!(currentfs instanceof DistributedFileSystem))   return c;
  Configuration c2=new Configuration(c);
  String username=UGI.getUserName() + ".hrs." + index++;
  UnixUserGroupInformation.saveToConf(c2,UnixUserGroupInformation.UGI_PROPERTY_NAME,new UnixUserGroupInformation(username,new String[]{"supergroup"}));
  return c2;
}
