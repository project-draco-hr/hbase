{
  JSONObject innerFilterJSON;
  FilterFactory f;
  String innerFilterType;
  String innerFilterArgs;
  try {
    innerFilterJSON=new JSONObject(args);
  }
 catch (  JSONException e) {
    throw new HBaseRestException(e);
  }
  if ((innerFilterType=innerFilterJSON.optString(TYPE)) == null)   throw new MalformedFilterException();
  if ((innerFilterArgs=innerFilterJSON.optString(ARGUMENTS)) == null)   throw new MalformedFilterException();
  if ((f=RESTConstants.filterFactories.get(innerFilterType)) == null)   throw new MalformedFilterException();
  RowFilterInterface innerFilter=f.getFilterFromJSON(innerFilterArgs);
  return new WhileMatchRowFilter(innerFilter);
}
