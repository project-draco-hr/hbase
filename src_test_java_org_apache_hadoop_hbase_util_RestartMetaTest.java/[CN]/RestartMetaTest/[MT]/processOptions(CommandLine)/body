{
  hbaseHome=cmd.getOptionValue(OPT_HBASE_HOME);
  if (hbaseHome == null || !new File(hbaseHome).isDirectory()) {
    throw new IllegalArgumentException("Invalid HBase home directory: " + hbaseHome);
  }
  LOG.info("Using HBase home directory " + hbaseHome);
  numRegionServers=Integer.parseInt(cmd.getOptionValue(OPT_NUM_RS,String.valueOf(DEFAULT_NUM_RS)));
}
