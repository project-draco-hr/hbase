{
  try {
    if (region.isMetaRegion()) {
      ServerName server=this.server.getMetaTableLocator().getMetaRegionLocation(this.server.getZooKeeper());
      return regionStates.isServerDeadAndNotProcessed(server);
    }
    while (!server.isStopped()) {
      try {
        this.server.getMetaTableLocator().waitMetaRegionLocation(server.getZooKeeper());
        Result r=MetaTableAccessor.getRegionResult(server.getShortCircuitConnection(),region.getRegionName());
        if (r == null || r.isEmpty())         return false;
        ServerName server=HRegionInfo.getServerName(r);
        return regionStates.isServerDeadAndNotProcessed(server);
      }
 catch (      IOException ioe) {
        LOG.info("Received exception accessing hbase:meta during force assign " + region.getRegionNameAsString() + ", retrying",ioe);
      }
    }
  }
 catch (  InterruptedException e) {
    Thread.currentThread().interrupt();
    LOG.info("Interrupted accessing hbase:meta",e);
  }
  return regionStates.isServerDeadAndNotProcessed(sn);
}
