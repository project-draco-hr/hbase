{
  List<HRegionInfo> hris=MetaTableAccessor.getTableRegions(this.watcher,this.server.getShortCircuitConnection(),tableName,true);
  Integer pending=0;
  for (  HRegionInfo hri : hris) {
    String name=hri.getEncodedName();
    if (regionsToReopen.containsKey(name) || regionStates.isRegionInTransition(name)) {
      pending++;
    }
  }
  return new Pair<Integer,Integer>(pending,hris.size());
}
