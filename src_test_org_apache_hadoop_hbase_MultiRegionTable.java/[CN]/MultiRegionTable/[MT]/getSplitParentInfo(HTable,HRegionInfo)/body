{
  Scanner s=t.getScanner(HConstants.COLUMN_FAMILY_ARRAY,HConstants.EMPTY_START_ROW,System.currentTimeMillis(),null);
  try {
    for (    RowResult r : s) {
      HRegionInfo hri=Writables.getHRegionInfo(r.get(HConstants.COL_REGIONINFO));
      if (hri == null) {
        continue;
      }
      if (hri.getRegionName().equals(parent.getRegionName()) && hri.getRegionId() == parent.getRegionId()) {
        return r;
      }
    }
    return null;
  }
  finally {
    s.close();
  }
}
