{
  if (!c.getBoolean(HConstants.MASTER_TYPE_BACKUP,HConstants.DEFAULT_MASTER_TYPE_BACKUP)) {
    return;
  }
  while (!amm.isActiveMaster()) {
    LOG.debug("Waiting for master address ZNode to be written " + "(Also watching cluster state node)");
    Thread.sleep(c.getInt("zookeeper.session.timeout",60 * 1000));
  }
}
