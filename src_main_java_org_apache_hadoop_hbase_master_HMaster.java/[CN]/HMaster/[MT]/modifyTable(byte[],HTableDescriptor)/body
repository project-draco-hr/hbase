{
  checkInitialized();
  if (cpHost != null) {
    cpHost.preModifyTable(tableName,htd);
  }
  TableEventHandler tblHandle=new ModifyTableHandler(tableName,htd,this,this,this,supportInstantSchemaChanges);
  this.executorService.submit(tblHandle);
  tblHandle.waitForPersist();
  if (cpHost != null) {
    cpHost.postModifyTable(tableName,htd);
  }
}
