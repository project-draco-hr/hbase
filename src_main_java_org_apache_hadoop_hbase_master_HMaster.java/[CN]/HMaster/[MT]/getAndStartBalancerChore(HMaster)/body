{
  String name=master.getServerName() + "-balancerChore";
  int period=master.getConfiguration().getInt("hbase.master.balancer.period",3000000);
  Chore chore=new Chore(name,period,master){
    @Override protected void chore(){
      master.balance();
    }
  }
;
  Threads.setDaemonThreadRunning(chore,name);
  return chore;
}
