{
  HRegion r=HRegion.newHRegion(this.fs.getTableDir(),this.getLog(),fs.getFileSystem(),this.getBaseConf(),hri,this.getTableDesc(),rsServices);
  r.readRequestsCount.set(this.getReadRequestsCount() / 2);
  r.writeRequestsCount.set(this.getWriteRequestsCount() / 2);
  fs.commitDaughterRegion(hri);
  return r;
}
