{
  startRegionOperation(Operation.SCAN);
  try {
    prepareScanner(scan);
    if (scan.hasFamilies()) {
      for (      byte[] family : scan.getFamilyMap().keySet()) {
        checkFamily(family);
      }
    }
    return instantiateRegionScanner(scan,additionalScanners);
  }
  finally {
    closeRegionOperation();
  }
}
