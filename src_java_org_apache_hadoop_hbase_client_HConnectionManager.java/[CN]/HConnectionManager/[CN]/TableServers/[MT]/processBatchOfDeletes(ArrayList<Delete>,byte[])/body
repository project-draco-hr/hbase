{
  if (list.isEmpty())   return 0;
  if (list.size() > 1)   Collections.sort(list);
  Batch b=new Batch(this){
    @Override int doCall(    final List<Row> currentList,    final byte[] row,    final byte[] tableName) throws IOException, RuntimeException {
      final Delete[] deletes=currentList.toArray(DELETE_ARRAY_TYPE);
      return getRegionServerWithRetries(new ServerCallable<Integer>(this.c,tableName,row){
        public Integer call() throws IOException {
          return server.delete(location.getRegionInfo().getRegionName(),deletes);
        }
      }
);
    }
  }
;
  return b.process(list,tableName);
}
