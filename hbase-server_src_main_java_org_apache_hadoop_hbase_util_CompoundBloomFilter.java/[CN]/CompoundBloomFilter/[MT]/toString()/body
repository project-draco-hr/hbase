{
  StringBuilder sb=new StringBuilder();
  sb.append(ByteBloomFilter.formatStats(this));
  sb.append(ByteBloomFilter.STATS_RECORD_SEP + "Number of chunks: " + numChunks);
  sb.append(ByteBloomFilter.STATS_RECORD_SEP + ((comparator != null) ? "Comparator: " + comparator.getClass().getSimpleName() : "Comparator: " + Bytes.BYTES_RAWCOMPARATOR.getClass().getSimpleName()));
  return sb.toString();
}
