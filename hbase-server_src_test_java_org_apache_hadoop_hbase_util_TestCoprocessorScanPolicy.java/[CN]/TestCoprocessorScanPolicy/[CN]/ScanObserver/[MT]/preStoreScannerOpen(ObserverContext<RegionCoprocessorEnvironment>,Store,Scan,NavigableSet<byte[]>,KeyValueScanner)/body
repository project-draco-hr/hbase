{
  Long newTtl=ttls.get(store.getTableName());
  Integer newVersions=versions.get(store.getTableName());
  ScanInfo oldSI=store.getScanInfo();
  HColumnDescriptor family=store.getFamily();
  ScanInfo scanInfo=new ScanInfo(family.getName(),family.getMinVersions(),newVersions == null ? family.getMaxVersions() : newVersions,newTtl == null ? oldSI.getTtl() : newTtl,family.getKeepDeletedCells(),oldSI.getTimeToPurgeDeletes(),oldSI.getComparator());
  return new StoreScanner(store,scanInfo,scan,targetCols,((HStore)store).getHRegion().getReadpoint(IsolationLevel.READ_COMMITTED));
}
