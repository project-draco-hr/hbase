{
  byte[][] cols={column};
  InternalScanner s=r.getScanner(cols,HConstants.EMPTY_START_ROW,System.currentTimeMillis(),null);
  try {
    HStoreKey curKey=new HStoreKey();
    TreeMap<byte[],byte[]> curVals=new TreeMap<byte[],byte[]>(Bytes.BYTES_COMPARATOR);
    boolean first=true;
    OUTER_LOOP:     while (s.next(curKey,curVals)) {
      for (      byte[] col : curVals.keySet()) {
        byte[] val=curVals.get(col);
        byte[] curval=val;
        if (first) {
          first=false;
          assertTrue(Bytes.compareTo(curval,firstValue) == 0);
        }
 else {
          break OUTER_LOOP;
        }
      }
    }
  }
  finally {
    s.close();
  }
}
