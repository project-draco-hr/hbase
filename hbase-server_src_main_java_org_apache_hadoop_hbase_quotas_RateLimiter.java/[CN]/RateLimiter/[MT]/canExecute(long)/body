{
  long refillAmount=refill(limit,avail);
  if (refillAmount == 0 && avail < amount) {
    return false;
  }
  if (avail <= Long.MAX_VALUE - refillAmount) {
    avail=Math.max(0,Math.min(avail + refillAmount,limit));
  }
 else {
    avail=Math.max(0,limit);
  }
  if (avail >= amount) {
    return true;
  }
  return false;
}
