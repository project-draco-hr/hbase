{
switch (timeUnit) {
case NANOSECONDS:
    throw new RuntimeException("Unsupported NANOSECONDS TimeUnit");
case MICROSECONDS:
  throw new RuntimeException("Unsupported MICROSECONDS TimeUnit");
case MILLISECONDS:
tunit=1;
break;
case SECONDS:
tunit=1000;
break;
case MINUTES:
tunit=60 * 1000;
break;
case HOURS:
tunit=60 * 60 * 1000;
break;
case DAYS:
tunit=24 * 60 * 60* 1000;
break;
}
this.limit=limit;
this.avail=limit;
}
